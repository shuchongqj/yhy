<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/sport_user_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="PingFangSC"
        android:text="用户基本信息录入"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="跳过"
        android:textColor="#999999" />

    <TextView
        android:id="@+id/sport_user_sex_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sport_user_title"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:text="性别"
        android:textColor="#4A4A4A"
        android:textSize="16sp" />

    <com.yhy.sport.view.SmoothSwitchButton
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sport_user_sex_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

    </com.yhy.sport.view.SmoothSwitchButton>

</RelativeLayout>