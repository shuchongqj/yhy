<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent"/>
            <stroke android:width="0.5dp"
                    android:color="@color/transparent"/>
            <corners android:bottomLeftRadius="@dimen/dd_dimen_10px"
                android:topLeftRadius="@dimen/dd_dimen_10px"
                android:bottomRightRadius="0dp"
                android:topRightRadius="0dp"></corners>
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#80E74646"/>
            <stroke android:width="0.5dp"
                    android:color="@color/transparent"/>
            <corners android:bottomRightRadius="@dimen/dd_dimen_10px"
                android:topRightRadius="@dimen/dd_dimen_10px"
                android:bottomLeftRadius="0dp"
                android:topLeftRadius="0dp"></corners>
        </shape>
    </item>
</selector>