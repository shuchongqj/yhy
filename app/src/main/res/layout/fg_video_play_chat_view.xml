    <RelativeLayout
        android:id="@+id/fg_video_play_chat_list_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_40px">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/ic_live_create_title_edit" />

        <EditText
            android:id="@+id/fg_video_play_chat_message_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="说点什么"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLength="40"
            android:maxLines="1"
            android:textColor="@color/neu_333333"
            android:textColorHint="@color/neu_999999"
            android:textCursorDrawable="@drawable/default_et"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fg_video_play_chat_send_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送" />
    </LinearLayout>
</LinearLayout>