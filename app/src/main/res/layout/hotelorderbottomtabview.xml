<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/orderline_e1e1e1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="6"
            android:background="@color/color_norm_ffffff">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/ll_sales_details"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dd_dimen_44px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dd_dimen_25px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="明细"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dd_dimen_6px"
                        android:src="@mipmap/arrow_up_icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/ll_sales_details"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_marginRight="@dimen/dd_dimen_10px"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_order_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:singleLine="true"
                            android:textColor="@color/title_right_btn_text_color"
                            android:textSize="@dimen/dd_dimen_32px" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_discount"
                        android:visibility="gone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_3px"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_order_disprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textColor="@color/main"
                            android:textSize="@dimen/dd_dimen_24px" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dd_dimen_1px"
            android:layout_height="@dimen/dd_dimen_100px"
            android:layout_gravity="center_vertical"
            android:background="@color/color_norm_eeeeee" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@color/ac_title_bg_color">

            <Button
                android:id="@+id/tv_order_submit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/scenic_top_translate_selector"
                android:textColor="@color/white"
                android:textSize="@dimen/dd_dimen_34px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>