<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/orderline_e1e1e1" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_weight="2"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_all_checked"
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:padding="@dimen/dd_dimen_15px"
                android:src="@mipmap/spcart_unchecked" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_5px"
                android:text="全选"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_delete_all"
            android:layout_width="@dimen/dd_dimen_140px"
            android:layout_height="@dimen/dd_dimen_60px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:background="@drawable/spcart_delete_btn"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/main" />

    </RelativeLayout>


</LinearLayout>