<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/common_divider" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dd_dimen_88px"
        android:layout_height="@dimen/dd_dimen_88px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_215_150"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dd_dimen_88px"
        android:layout_height="@dimen/dd_dimen_88px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:src="@mipmap/icon_default_128_128" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_24px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_toLeftOf="@id/iv_pic"
        android:layout_toRightOf="@id/iv_icon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/neu_666666"
                android:lines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_24px" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_24px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_10px"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/dd_dimen_100px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:ellipsize="end"
        android:gravity="left|top"
        android:textColor="@color/color_norm_636363"
        android:textSize="@dimen/dd_dimen_24px"
        android:visibility="visible" />
</RelativeLayout>