<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orderbackground_f4f4f4"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:text="充值后可使用余额进行支付"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/dd_dimen_30px"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_40px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_40px"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/select_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dd_dimen_130px"
                        android:background="@color/neu_fbfbfb"
                        android:clickable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dd_dimen_30px"
                            android:text="到账银行卡"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />

                        <TextView
                            android:id="@+id/tv_card_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dd_dimen_200px"
                            android:textColor="@color/neu_fb9b00"
                            android:textSize="@dimen/dd_dimen_30px" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:visibility="gone"
                            android:layout_marginRight="15dip"
                            android:src="@mipmap/arrow_go" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dd_dimen_1px"
                    android:background="@color/orderline_e1e1e1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dd_dimen_30px"
                        android:layout_marginTop="@dimen/dd_dimen_30px"
                        android:text="提现金额"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dd_dimen_20px"
                        android:layout_marginLeft="@dimen/dd_dimen_30px"
                        android:layout_marginTop="@dimen/dd_dimen_30px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="￥"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />

                        <EditText
                            android:id="@+id/et_withdraw_num"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dd_dimen_5px"
                            android:layout_marginRight="@dimen/dd_dimen_24px"
                            android:background="@null"
                            android:numeric="decimal"
                            android:singleLine="true"
                            android:textColor="@color/neu_333333"
                            android:textCursorDrawable="@null"
                            android:textSize="@dimen/dd_dimen_50px"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/dd_dimen_1px"
                        android:background="@color/orderline_e1e1e1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dd_dimen_110px"
                        android:background="@color/white"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_remain_sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dd_dimen_30px"
                            android:textColor="@color/neu_999999"
                            android:textSize="@dimen/dd_dimen_30px" />

                        <TextView
                            android:id="@+id/tv_all_withdraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:text="全部提现"
                            android:textColor="@color/neu_fb9b00"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_40px"
                    android:text="24小时以内到账"
                    android:textColor="@color/neu_999999"
                    android:textSize="@dimen/dd_dimen_30px" />

                <Button
                    android:id="@+id/btn_config"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dd_dimen_100px"
                    android:layout_marginTop="@dimen/dd_dimen_40px"
                    android:background="@drawable/btn_orange_selector"
                    android:text="提现"
                    android:textSize="@dimen/dd_dimen_34px" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>