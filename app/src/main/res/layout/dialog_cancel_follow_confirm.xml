<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_20px"
        android:text="是否不再关注此人？"
        android:textColor="@color/neu_333333"
        android:textSize="@dimen/text_size_30px"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/neu_f4f4f4"/>

    <TextView
        android:id="@+id/dialog_canel_follow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_20px"
        android:text="@string/label_btn_ok"
        android:textColor="@color/neu_333333"
        android:textSize="@dimen/text_size_30px"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/neu_f4f4f4"/>

    <TextView
        android:id="@+id/dialog_map_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_20px"
        android:text="@string/cancel"
        android:textColor="@color/red_ying"
        android:textSize="@dimen/text_size_30px"/>
</LinearLayout>