<?xml version="1.0" encoding="utf-8"?>
<com.quanyan.base.view.customview.pulltorefresh.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/no_data_scroll_view"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/no_data_layout"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:text="您可以去热门看看"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/no_data_btn"
                    android:layout_width="wrap_content"
                    android:text="前往热门"
                    android:padding="8dp"
                    android:textColor="@color/follow_txt_color"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_above="@id/no_data_layout"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:scaleType="center"
                android:src="@mipmap/default_page_trends"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </LinearLayout>

</com.quanyan.base.view.customview.pulltorefresh.PullToRefreshScrollView>