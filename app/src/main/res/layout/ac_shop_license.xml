<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ac_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_60px"
        android:paddingBottom="@dimen/dd_dimen_90px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/iv_license_img"
            android:layout_width="@dimen/dd_dimen_348px"
            android:layout_height="@dimen/dd_dimen_248px"
            android:layout_below="@+id/tv_title_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_40px" />

    </RelativeLayout>


</LinearLayout>