<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg">

    <ImageView
        android:id="@+id/iv_handcere_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_360px"
        android:layout_marginBottom="@dimen/dd_dimen_5px"
        android:background="@mipmap/icon_default_310_180"
        android:scaleType="centerCrop" />

    <!-- price -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dd_dimen_65px"
        android:layout_alignBottom="@+id/iv_handcere_bg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dd_dimen_30px"
        android:alpha="0.7"
        android:background="@drawable/shape_travevity_title_bg"
        android:orientation="horizontal"
        android:padding="@dimen/dd_dimen_10px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="￥"
            android:visibility="gone"
            android:textColor="@color/color_norm_ffffff"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:id="@+id/tv_handcere_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_norm_ffffff"
            android:textSize="@dimen/dd_dimen_34px" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:text="起/会员"
            android:textColor="@color/color_norm_ffffff"
            android:textSize="@dimen/dd_dimen_20px" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_handcere_bg"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_marginBottom="@dimen/dd_dimen_20px">
        <TextView
            android:id="@+id/tv_handcere_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="0分"
            android:layout_centerVertical="true"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

        <com.quanyan.yhy.ui.views.CustomerRatingBarGo
            android:id="@+id/rb_handcere_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dimen_10px"
            android:layout_toLeftOf="@+id/tv_handcere_grade"
            android:layout_centerVertical="true"
            android:orientation="horizontal" />


        <TextView
            android:id="@+id/tv_handcere_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未知"
            android:singleLine="true"
            android:gravity="left"
            android:layout_toLeftOf="@+id/rb_handcere_grade"
            android:layout_centerVertical="true"
            android:textColor="@color/color_norm_636363"
            android:textSize="@dimen/dd_dimen_34px" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_30px"
        android:layout_alignParentLeft="true"
 android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/eventitem_tv_message2"
        android:background="@color/color_norm_ffffff"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>