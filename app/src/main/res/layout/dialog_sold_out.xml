<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_50px"
        android:layout_marginRight="@dimen/dd_dimen_50px"
        android:background="@drawable/spcart_delete_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_35px"
            android:layout_marginRight="@dimen/dd_dimen_35px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:gravity="center_horizontal"
            android:text="您选择的商品中存在库存不足或下架的商品,请您返回购物车重新选择商品!"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/tc_e1e1e1" />

        <RelativeLayout
            android:id="@+id/rl_btn_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_90px">

            <TextView
                android:id="@+id/tv_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="返回购物车"
                android:textColor="@color/red_ying"
                android:textSize="@dimen/dd_dimen_30px" />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>