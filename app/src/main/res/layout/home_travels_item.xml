<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/dd_dimen_25px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_25px">
    <!--  android:scaleType="centerCrop"-->
    <ImageView
        android:id="@+id/sa_iv_1"
        android:layout_width="@dimen/dd_dimen_214px"
        android:layout_height="@dimen/dd_dimen_150px"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/cell_plane_hotel_set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sa_iv_1"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_8px"
        android:layout_toRightOf="@id/sa_iv_1"
        android:singleLine="true"
        android:textColor="@color/color_norm_636363"
        android:textSize="@dimen/text_size_30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cell_plane_hotel_set_bottom_layout"
        android:layout_alignLeft="@id/cell_plane_hotel_set_title"
        android:layout_below="@id/cell_plane_hotel_set_title"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/cell_plane_hotel_set_brief"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_24px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cell_plane_hotel_set_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sa_iv_1"
        android:layout_alignLeft="@id/cell_plane_hotel_set_title"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cell_plane_hotel_set_like_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawableLeft="@mipmap/icon_love"
            android:drawablePadding="@dimen/dd_dimen_10px"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/cell_plane_hotel_set_lookk_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:drawableLeft="@mipmap/ic_eye"
            android:drawablePadding="@dimen/dd_dimen_10px"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/cell_plane_hotel_set_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:drawableLeft="@mipmap/icon_travel_time"
            android:drawablePadding="@dimen/dd_dimen_10px"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/text_size_24px" />
    </LinearLayout>
</RelativeLayout>