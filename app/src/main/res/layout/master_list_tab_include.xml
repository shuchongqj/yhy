<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <RelativeLayout
                    android:id="@+id/rel_master_tab_layout1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_master_tab1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/master_list_tab1"
                        android:textColor="@color/ac_title_bg_color"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_master_tab_layout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_master_tab2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/master_list_tab2"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_master_tab_layout3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_master_tab3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/master_list_tab3"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_tab_now"
                android:layout_width="@dimen/dd_dimen_240px"
                android:layout_height="@dimen/dd_dimen_6px"
                android:layout_below="@id/title_layout"
                android:background="@color/ac_title_bg_color" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:background="@color/orderline_e1e1e1" />

        <com.quanyan.yhy.ui.views.NoScrollViewPager
            android:id="@+id/vp_master_tab"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </LinearLayout>
</LinearLayout>