<?xml version="1.0" encoding="utf-8"?>
<com.mogujie.tt.ui.widget.IMGoodsLinkView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_link_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neu_f4f4f4"
    android:paddingBottom="@dimen/dd_dimen_15px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_15px">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dd_dimen_160px"
        android:layout_height="@dimen/dd_dimen_160px"
        android:layout_marginRight="@dimen/dd_dimen_16px"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_5px"
        android:layout_toRightOf="@id/iv_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/neu_666666"
        android:textSize="@dimen/dd_dimen_32px" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:layout_toRightOf="@id/iv_icon"
        android:textColor="@color/neu_999999"
        android:textSize="@dimen/dd_dimen_22px" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="@dimen/dd_dimen_220px"
        android:layout_height="@dimen/dd_dimen_45px"
        android:layout_below="@id/tv_price"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:layout_toRightOf="@id/iv_icon"
        android:background="@drawable/shape_more_item_ability_bg"
        android:gravity="center"
        android:textColor="@color/red_ying"
        android:textSize="@dimen/dd_dimen_26px" />

</com.mogujie.tt.ui.widget.IMGoodsLinkView>