<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/click_selector"
              android:descendantFocusability="blocksDescendants"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dd_dimen_20px"
              android:paddingLeft="@dimen/dd_dimen_40px"
              android:paddingRight="@dimen/dd_dimen_40px"
              android:paddingTop="@dimen/dd_dimen_20px">

    <ImageView
        android:id="@+id/cell_live_detail_comment_user_head"
        android:layout_width="@dimen/dd_dimen_75px"
        android:layout_height="@dimen/dd_dimen_75px"
        android:src="@mipmap/icon_default_128_128"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_21px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cell_live_detail_comment_username"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="15"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/yhy_size_14px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/cell_live_detail_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_12px"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/yhy_size_11px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cell_live_detail_comment_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dd_dimen_9px"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/neu_4a4a4a"
            android:textSize="@dimen/yhy_size_14px"/>

    </LinearLayout>
</LinearLayout>