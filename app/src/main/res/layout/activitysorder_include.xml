<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/order_parent_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dip">

        <LinearLayout
            android:id="@+id/order_property_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginTop="@dimen/dd_dimen_24px"
                android:text="选择日期"
                android:textColor="@color/order_666666"
                android:textSize="@dimen/dd_dimen_30px" />

            <com.quanyan.yhy.view.LabelLayout
                android:id="@+id/add_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_20px" />

        </LinearLayout>

        <View
            android:id="@+id/order_line_view1"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:background="@color/orderline_e1e1e1" />


        <LinearLayout
            android:id="@+id/order_pack_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingBottom="10dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginTop="@dimen/dd_dimen_24px"
                android:text="@string/order_meal"
                android:textColor="@color/order_666666"
                android:textSize="@dimen/dd_dimen_30px" />

            <com.quanyan.yhy.view.LabelLayout
                android:id="@+id/add_topic_popular_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_20px" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:background="@color/orderline_e1e1e1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:layout_marginLeft="@dimen/dd_dimen_30px">

            <com.quanyan.yhy.ui.order.NumberChooseView
                android:id="@+id/nc_num_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="15dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@+id/nc_num_select1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="购买数量"
                    android:textColor="@color/order_666666"
                    android:textSize="@dimen/dd_dimen_30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="120dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/unit_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥0"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:background="@color/orderline_e1e1e1" />


        <RelativeLayout
            android:id="@+id/select_linkman_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:background="@drawable/scenic_top_translate_selector"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:text="联系人信息"
                android:textColor="#666"
                android:textSize="@dimen/dd_dimen_30px" />

            <RelativeLayout
                android:id="@+id/scenicorder_selectdata_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="120dip">

                <TextView
                    android:id="@+id/scenicorder_entertime_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="请填写全信息"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dd_dimen_30px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dip"
                    android:src="@mipmap/arrow_go" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:background="@color/orderline_e1e1e1" />

        <LinearLayout
            android:id="@+id/ll_select_linkman"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <View
            android:id="@+id/select_linkman_view"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_20px"
            android:background="@color/orderline_e1e1e1"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/rl_coupon_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:background="@drawable/scenic_top_translate_selector"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:src="@mipmap/discount_coupon_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:text="优惠券"
                    android:textColor="#666"
                    android:textSize="@dimen/dd_dimen_30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_5px"
                    android:src="@mipmap/arrow_go" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:background="@color/orderline_e1e1e1" />


        <EditText
            android:id="@+id/scenic_othersrq_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:background="@null"
            android:gravity="top"
            android:hint="如果您有特殊需求请在此处留言"
            android:maxLength="200"
            android:paddingBottom="10dip"
            android:paddingTop="3dip"
            android:textColor="@color/order_666666"
            android:textColorHint="@color/order_999999"
            android:textSize="@dimen/dd_dimen_30px" />
    </LinearLayout>

</LinearLayout>