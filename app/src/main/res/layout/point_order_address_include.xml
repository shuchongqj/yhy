<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_noadress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_130px"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dd_dimen_1px"
            android:background="@drawable/find_item_bg_selector">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <ImageView
                    android:layout_width="@dimen/dd_dimen_45px"
                    android:layout_height="@dimen/dd_dimen_45px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_20px"
                    android:src="@mipmap/ic_visitor_add" />

                <TextView
                    android:id="@+id/tv_visitor_add_hint"
                    style="@style/fontType_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="请添加收货地址"
                    android:textSize="@dimen/dd_dimen_30px" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:src="@mipmap/arrow_go" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_hasadress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:visibility="gone"
                android:src="@mipmap/ic_address_location" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:src="@mipmap/arrow_go" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:layout_toLeftOf="@id/iv_arrow"
                android:layout_toRightOf="@id/iv_adress"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_rcadress_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dd_dimen_30px" />

                        <TextView
                            android:id="@+id/tv_rcadress_tips"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/dd_dimen_10px"
                            android:textColor="@color/main"
                            android:textSize="@dimen/dd_dimen_25px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_rcadress_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_rcadress_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:textColor="@color/order_666666"
                    android:textSize="@dimen/dd_dimen_24px" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>