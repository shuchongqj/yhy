<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view_pedometer_share_container_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_pro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_pedo_share_self"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pedometer_share_drawable"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px"
                android:paddingTop="@dimen/dd_dimen_50px">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/neu_f4f4f4"/>

                <TextView
                    android:id="@+id/view_share_pedometer_share_text_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_marginRight="@dimen/dd_dimen_20px"
                    android:text="我的邀请二维码"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_26px"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/neu_f4f4f4"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_share_pedometer_share_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px"
                android:paddingBottom="@dimen/dd_dimen_60px"
                android:paddingTop="@dimen/dd_dimen_60px">

                <LinearLayout
                    android:id="@+id/view_share_pedometer_wechat_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_wechat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="微信"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_wechat_circles_layut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_wechat_firends"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="朋友圈"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_weibo_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_weibo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="微博"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_qq_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_qq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="QQ"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/view_share_pedometer_cicles_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_master_circles"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="圈子"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_share_pedometer_qr_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/dd_dimen_20px"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/view_share_pedometer_qr_code_pro"
                    android:layout_width="@dimen/dd_dimen_250px"
                    android:layout_height="@dimen/dd_dimen_250px"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:layout_width="82dp"
                    android:layout_height="31.22dp"
                    android:src="@mipmap/app_icon_hor" />
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@mipmap/app_icon"/>-->
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
