<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_norm_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="15dp">


    <ImageView
        android:id="@+id/iv_logistical"
        android:layout_width="@dimen/dd_dimen_150px"
        android:layout_height="@dimen/dd_dimen_150px"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_toRightOf="@id/iv_logistical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:text="ccccc"
            android:textSize="@dimen/dd_dimen_30px" />


        <TextView
            android:id="@+id/tv_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:textColor="#666666"
            android:text="cccc"
            android:textSize="@dimen/dd_dimen_30px" />

    </LinearLayout>
</RelativeLayout>
