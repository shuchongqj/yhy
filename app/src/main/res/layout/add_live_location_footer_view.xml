<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/click_selector"
    android:paddingBottom="@dimen/dd_dimen_15px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_15px">

    <LinearLayout
        android:id="@+id/add_live_loation_search_new_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/add_live_loation_search_new_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dd_dimen_9px"
            android:text="没有找到你的位置？"
            android:textColor="@color/tv_color_gray9"
            android:textSize="@dimen/dd_dimen_24px"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_live_loation_search_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创建新的位置："
                android:textColor="@color/tv_color_gray9"
                android:textSize="@dimen/dd_dimen_24px"/>

            <TextView
                android:id="@+id/add_live_loation_search_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="望京"
                android:textColor="@color/tv_color_gray9"
                android:textSize="@dimen/dd_dimen_24px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>