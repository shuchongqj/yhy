<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dd_dimen_30px"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px">

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dd_dimen_40px"
                    android:text="请上传****有效二代身份证"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_32px" />

                <LinearLayout
                    android:id="@+id/ll_idcard_upload_postive"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_260px"

                    android:layout_marginTop="@dimen/dd_dimen_28px"
                    android:background="@drawable/bg_idcard_upload"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_idcard_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dd_dimen_40px"
                        android:src="@mipmap/btn_idcard_upload_postive" />

                    <TextView
                        android:id="@+id/tv_idcard_position"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dd_dimen_20px"
                        android:text="上传身份证正面"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_idcard_upload_negative"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_260px"
                    android:layout_marginTop="@dimen/dd_dimen_20px"

                    android:background="@drawable/bg_idcard_upload"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_idcard_negative"

                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dd_dimen_40px"
                        android:src="@mipmap/btn_idcard_upload_negative" />

                    <TextView
                        android:layout_width="wrap_content"                        android:id="@+id/tv_idcard_negative"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dd_dimen_20px"
                        android:text="上传身份证背面"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_324px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dd_dimen_28px"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_256px"
                    android:layout_marginTop="@dimen/dd_dimen_43px"
                    android:background="@drawable/bg_idcard_upload_notice"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dd_dimen_40px">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/icon_idcard_right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dd_dimen_20px"
                            android:text="标准"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/icon_idcard_wrong1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dd_dimen_20px"
                            android:text="边框缺失"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/icon_idcard_wrong2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dd_dimen_20px"
                            android:text="照片模糊"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/icon_idcard_wrong3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dd_dimen_20px"
                            android:text="闪光强烈"
                            android:textColor="@color/neu_333333"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="@dimen/margin_100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dd_dimen_70px"
                    android:layout_marginTop="@dimen/dd_dimen_26px"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="拍摄示例"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_30px" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_idcardupload_confirm_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dd_dimen_30px"
                android:background="@drawable/bg_idcard_upload_selector"
                android:text="提交认证"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_36px" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
