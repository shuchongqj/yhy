<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_grey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:background="@color/white"
                android:paddingBottom="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_20px">

                <ImageView
                    android:id="@+id/iv_eat_product_bg"
                    android:layout_width="@dimen/dd_dimen_132px"
                    android:layout_height="@dimen/dd_dimen_132px"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_default_150_150" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_34px"
                    android:orientation="vertical">

                    <com.quanyan.yhy.view.JustifyTextView
                        android:id="@+id/tv_eat_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_8px"
                        android:layout_marginRight="@dimen/dd_dimen_30px"
                        android:text=""
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_30px" />


                    <LinearLayout
                        android:id="@+id/lv_cityaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_eat_product_name"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:layout_marginBottom="@dimen/dd_dimen_10px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            android:background="@mipmap/location_eat" />

                        <TextView
                            android:id="@+id/tv_eat_product_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/neu_666666"
                            android:textSize="@dimen/text_size_24px" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_eat_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lv_cityaddress"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/neu_666666"
                        android:textSize="@dimen/text_size_24px" />
                </RelativeLayout>
            </LinearLayout>
            <View style="@style/split_line"
                android:layout_height="@dimen/dd_dimen_1px"></View>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingBottom="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_location"
                android:layout_width="@dimen/dd_dimen_27px"
                android:layout_height="@dimen/dd_dimen_38px"
                android:layout_marginTop="@dimen/dd_dimen_30px"
                android:scaleType="fitXY"
                android:background="@mipmap/location_eat" />

            <com.quanyan.yhy.view.JustifyTextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_30px"
                android:layout_marginLeft="@dimen/dd_dimen_28px"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@+id/iv_icon_location"
                android:layout_toLeftOf="@+id/iv_icon_go1"
                android:textSize="@dimen/text_size_30px"
                android:textColor="@color/neu_333333"
                android:text=""/>

            <ImageView
                android:id="@+id/iv_icon_go1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View style="@style/split_line"
            android:layout_height="@dimen/dd_dimen_1px"></View>

        <RelativeLayout
            android:id="@+id/rl_phone_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon_phone"
                android:layout_width="@dimen/dd_dimen_30px"
                android:layout_height="@dimen/dd_dimen_30px"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_travel_phone" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_22px"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@+id/iv_icon_phone"
                android:layout_toLeftOf="@+id/iv_icon_go2"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_30px"
                android:textColor="@color/neu_333333"
                android:text=""/>

            <ImageView
                android:id="@+id/iv_icon_go2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/arrow_go"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_88px"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:textSize="@dimen/text_size_30px"
                android:textColor="@color/neu_333333"
                android:text="商户信息"/>

            <View style="@style/split_line"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_marginBottom="@dimen/dd_dimen_30px"></View>

            <com.quanyan.yhy.view.HomeMenu_GridView
                android:id="@+id/hg_shop_detail"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:horizontalSpacing="@dimen/dd_dimen_10px"
                android:verticalSpacing="@dimen/dd_dimen_30px"
                android:listSelector="@color/transparent"
                android:numColumns="4">

            </com.quanyan.yhy.view.HomeMenu_GridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_88px"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_28px"
                    android:text="营业时间："/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_28px"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_30px"
                android:textColor="@color/neu_333333"
                android:text="美食攻略"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:layout_marginTop="@dimen/dd_dimen_20px" />

            <View
                style="@style/split_line"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:layout_marginBottom="@dimen/dd_dimen_10px"></View>

            <WebView
                android:id="@+id/wb_picture_txt_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
