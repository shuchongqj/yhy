<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:text="景区简介"
            android:textColor="#636363"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/scenicontext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:textColor="#999999"
            android:lineSpacingExtra="@dimen/dd_dimen_3px"
            android:textSize="@dimen/dd_dimen_24px" />


        <Button
            android:id="@+id/readmore_btn"
            android:layout_width="100dip"
            android:layout_height="40dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:background="@drawable/scenic_readmore_btn"
            android:text="阅读更多"
            android:textColor="#ff922b"
            android:visibility="gone" />

        <TextView
            android:id="@+id/readmore_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="15dip"
            android:text="全文"
            android:textColor="#666666"
            android:textSize="@dimen/dd_dimen_26px" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">
            <!-- 地图图片 -->
            <ImageView
                android:id="@+id/iv_map_image"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/margin_150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ditu"
                android:visibility="gone" />
            <!-- 地图View -->
            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_150dp"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/scenicdetails_call_relayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip">

            <LinearLayout
                android:id="@+id/scenicdetails_call_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/scenicdetails_tel_image" />

                <TextView
                    android:id="@+id/scencidetails_tel_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:textColor="#999999"
                    android:textSize="@dimen/dd_dimen_24px" />

            </LinearLayout>

            <Button
                android:id="@+id/scenicdetails_tel_btn"
                android:layout_width="60dip"
                android:layout_height="20dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/scenic_readmore_btn"
                android:text="立即拨打"
                android:textColor="@color/main"
                android:textSize="@dimen/dd_dimen_24px" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/scenicdetails_address_image" />

            <TextView
                android:id="@+id/scencidetails_address_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:textColor="#999"
                android:textSize="@dimen/dd_dimen_24px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="10dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/icon_travel_time" />

            <TextView
                android:id="@+id/scenicdetails_time_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dip"
                android:textColor="#999"
                android:textSize="@dimen/dd_dimen_24px" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>