<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/divider" />

    <LinearLayout
        android:id="@+id/ll_bottom_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_114px"
        android:background="@android:color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_main_page"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/tab_bar_main_page" />

            <TextView
                android:id="@+id/tv_tab_main_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_6px"
                android:gravity="center"
                android:text="@string/tab_main_page_name"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_sport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/tab_bar_club" />

            <TextView
                android:id="@+id/tv_tab_sport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_6px"
                android:gravity="center"
                android:text="@string/tab_sport_name"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>




        <LinearLayout
            android:id="@+id/ll_tab_publish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/tab_icon_create_default" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_discover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_tab_bar_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/tab_bar_discover" />

            <TextView
                android:id="@+id/tv_tab_bar_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_6px"
                android:gravity="center"
                android:text="@string/tab_discover_name"
                android:textColor="@color/tab_bar_text_color"
                android:textSize="@dimen/tab_bar_text_size" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_tab_personal_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_tab_personal_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tab_personal_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tab_bar_personal_center" />

                <TextView
                    android:id="@+id/tv_tab_personal_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dd_dimen_6px"
                    android:gravity="center"
                    android:text="@string/tab_personal_center_name"
                    android:textColor="@color/tab_bar_text_color"
                    android:textSize="@dimen/tab_bar_text_size" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_item_new_msg"
                android:layout_width="@dimen/dd_dimen_20px"
                android:layout_height="@dimen/dd_dimen_20px"
                android:layout_alignLeft="@id/ll_tab_personal_center"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/jkt_move_warning1"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>