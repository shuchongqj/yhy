<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/iv_back"
        android:src="@mipmap/ic_live_back"
        android:layout_marginLeft="@dimen/yhy_size_10px"
        android:layout_marginTop="@dimen/yhy_size_25px"
        android:layout_width="@dimen/yhy_size_32px"
        android:layout_height="@dimen/yhy_size_32px" />

    <RelativeLayout
        android:layout_marginTop="@dimen/yhy_size_25px"
        android:background="@drawable/shape_live_room_info_icon_bg"
        android:layout_marginLeft="@dimen/yhy_size_52px"
        android:layout_width="@dimen/yhy_size_160px"
        android:layout_height="@dimen/yhy_size_32px">

        <ImageView
            android:id="@+id/iv_anchor_head"
            android:layout_marginLeft="@dimen/yhy_size_4px"
            android:src="@mipmap/head_protriat_default"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/yhy_size_25px"
            android:layout_height="@dimen/yhy_size_25px" />

        <TextView
            android:id="@+id/tv_anchor_name"
            android:textColor="@color/white"
            android:text=""
            android:maxEms="5"
            android:layout_marginLeft="@dimen/yhy_size_34px"
            android:singleLine="true"
            android:textSize="@dimen/yhy_size_11px"
            android:layout_marginTop="@dimen/yhy_size_3px"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_follow_count"
            android:textColor="@color/white"
            android:text=""
            android:textSize="@dimen/yhy_size_9px"
            android:layout_below="@+id/tv_anchor_name"
            android:layout_marginLeft="@dimen/yhy_size_34px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_follow"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="+关注"
            android:background="@drawable/un_follow_bg"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/yhy_size_3px"
            android:textStyle="bold"
            android:textSize="@dimen/yhy_size_12px"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/yhy_size_53px"
            android:layout_height="@dimen/yhy_size_26px" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_share"
        android:src="@mipmap/ic_live_share"
        android:layout_marginTop="@dimen/yhy_size_25px"
        android:layout_marginRight="@dimen/yhy_size_10px"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/yhy_size_32px"
        android:layout_height="@dimen/yhy_size_32px" />

</RelativeLayout>