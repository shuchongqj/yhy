<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_140px"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/pay_select_im"
            android:layout_width="@dimen/dd_dimen_50px"
            android:layout_height="@dimen/dd_dimen_50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_24px"
            android:src="@mipmap/ic_checked" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:background="@color/orderline_e1e1e1"/>

</LinearLayout>