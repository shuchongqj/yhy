<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_27px">

        <ImageView
            android:id="@+id/club_apply_title_img"
            android:layout_width="@dimen/dd_dimen_130px"
            android:layout_height="@dimen/dd_dimen_130px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_215_150"/>

        <TextView
            android:id="@+id/club_apply_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@id/club_apply_title_img"
            android:singleLine="true"
            android:text="【沙画】花开的声音"
            android:textColor="@color/tv_color_gray63"
            android:textSize="@dimen/dd_dimen_30px"/>

        <TextView
            android:id="@+id/club_apply_title_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/club_apply_title_text"
            android:layout_below="@id/club_apply_title_text"
            android:layout_marginTop="@dimen/dd_dimen_25px"
            android:singleLine="true"
            android:text="@string/label_tv_act_date"
            android:textColor="@color/tv_color_gray63"
            android:textSize="@dimen/dd_dimen_24px"/>

        <TextView
            android:id="@+id/club_apply_title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/club_apply_title_text"
            android:layout_below="@id/club_apply_title_time"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:text="@string/label_tv_act_location"
            android:textColor="@color/tv_color_gray63"
            android:textSize="@dimen/dd_dimen_24px"/>
    </RelativeLayout>
</merge>