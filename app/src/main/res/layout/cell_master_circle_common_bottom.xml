<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/cell_circle_common_bottom_parent"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <!--android:paddingTop="@dimen/dd_dimen_10px">-->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="14.44dp">

        <TextView
            android:id="@+id/cell_circle_common_bottom_gps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/location_pin"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cell_circle_common_bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/cell_circle_common_bottom_comment_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:paddingTop="14.44dp">

                <ImageView
                    android:id="@+id/cell_circle_common_bottom_comment_img"
                    android:layout_width="@dimen/dd_dimen_28px"
                    android:layout_height="@dimen/dd_dimen_28px"
                    android:layout_marginTop="@dimen/dd_dimen_3px"
                    android:src="@drawable/ic_show_comment"/>

                <TextView
                    android:id="@+id/cell_circle_common_bottom_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_toRightOf="@id/cell_circle_common_bottom_comment_img"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/neu_999999"
                    android:textSize="@dimen/text_size_28px"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cell_circle_common_bottom_like_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_12px"
                android:paddingTop="14.44dp">

                <ImageView
                    android:id="@+id/cell_circle_common_bottom_like_img"
                    android:layout_width="@dimen/dd_dimen_28px"
                    android:layout_height="@dimen/dd_dimen_28px"
                    android:layout_marginBottom="@dimen/dd_dimen_3px"
                    android:src="@drawable/bg_cell_live_like_selector"/>

                <TextView
                    android:id="@+id/cell_circle_common_bottom_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:layout_toRightOf="@id/cell_circle_common_bottom_like_img"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/neu_999999"
                    android:textSize="@dimen/text_size_28px"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cell_circle_common_bottom_more_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/dd_dimen_28px"
                android:paddingRight="@dimen/dd_dimen_12px"
                android:paddingTop="14.44dp">

                <ImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="@dimen/dd_dimen_28px"
                    android:layout_height="@dimen/dd_dimen_28px"
                    android:src="@mipmap/ic_more_menu"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>