<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orderbackground_f4f4f4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_tel_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_40px"
        android:textColor="@color/neu_999999"
        android:textSize="@dimen/dd_dimen_30px" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginTop="@dimen/dd_dimen_40px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="验证码"
            android:visibility="gone"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_36px" />

        <Button
            android:id="@+id/btn_auth_code"
            android:layout_width="@dimen/dd_dimen_160px"
            android:layout_height="@dimen/dd_dimen_80px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_24px"
            android:background="@drawable/btn_pay_orange_selector"
            android:gravity="center"
            android:textSize="@dimen/dd_dimen_24px" />

        <com.quanyan.yhy.ui.wallet.view.WalletXEditText
            android:id="@+id/et_code_num"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_80px"
            android:layout_centerVertical="true"
            android:background="@drawable/wallet_vcode_background"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_24px"
            android:layout_toLeftOf="@+id/btn_auth_code"
            android:hint="填写验证码"
            android:paddingLeft="@dimen/dd_dimen_20px"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_34px" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_next_03"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:background="@drawable/btn_pay_orange_selector"
        android:textSize="@dimen/dd_dimen_34px" />

</LinearLayout>