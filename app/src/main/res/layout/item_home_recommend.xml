<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_recommend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/item_home_recommend_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_420px"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/item_home_recommend_start_city_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dd_dimen_25px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:background="@drawable/bg_label_black_round"
                android:paddingBottom="@dimen/dd_dimen_10px"
                android:paddingLeft="@dimen/dd_dimen_20px"
                android:paddingRight="@dimen/dd_dimen_20px"
                android:paddingTop="@dimen/dd_dimen_10px"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20px"/>

            <ImageView
                android:id="@+id/item_home_active_state_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_acitve_state"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_home_recommend_img"
                android:background="@drawable/bg_gradient_white_black"
                android:paddingBottom="@dimen/dd_dimen_16px"
                android:paddingTop="@dimen/dd_dimen_50px">

                <TextView
                    android:id="@+id/tv_home_recommend_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20px"/>

                <TextView
                    android:id="@+id/item_home_label_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_toLeftOf="@id/tv_home_recommend_sales"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_20px"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dd_dimen_30px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_home_recommend_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_30px"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/money_symbol"
                        android:textColor="@color/neu_fa4619"
                        android:textSize="@dimen/text_size_24px"/>

                    <TextView
                        android:id="@+id/item_home_recommend_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_8px"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/neu_fa4619"
                        android:textSize="@dimen/text_size_36px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_8px"
                        android:singleLine="true"
                        android:text="@string/money_start"
                        android:textColor="@color/neu_fa4619"
                        android:textSize="@dimen/text_size_20px"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px">

                <ImageView
                    android:id="@+id/iv_home_recommend_shop_head"
                    android:layout_width="@dimen/dd_dimen_60px"
                    android:layout_height="@dimen/dd_dimen_60px"
                    android:src="@mipmap/icon_default_128_128"/>

                <TextView
                    android:id="@+id/tv_home_recommend_shop_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/text_size_26px"/>
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/split_line"
            android:layout_height="@dimen/dd_dimen_20px"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_recommend_nodata_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_100px"
        android:paddingBottom="@dimen/dd_dimen_100px"
        android:paddingRight="@dimen/dd_dimen_40px"
        android:gravity="center"
        android:visibility="gone"
        android:paddingLeft="@dimen/dd_dimen_40px">

        <ImageView
            android:id="@+id/item_recommend_nodata_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/error_empty_icon"/>

        <TextView
            android:id="@+id/item_recommend_nodata_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textSize="@dimen/text_size_30px"
            android:textColor="@color/neu_999999"/>
    </LinearLayout>
</LinearLayout>