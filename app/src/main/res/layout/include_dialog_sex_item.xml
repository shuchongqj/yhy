<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_interest_item_background"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/background_circle_unselected">

        <ImageView
            android:id="@+id/dialog_interest_item_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_interest_male" />

        <ImageView
            android:id="@+id/dialog_interest_item_selected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_interest_right" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_interest_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_interest_item_background"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="ç”·" />

</LinearLayout>