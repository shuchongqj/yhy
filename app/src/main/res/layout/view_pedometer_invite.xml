<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_60">


    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_50px"
        android:layout_marginRight="@dimen/dd_dimen_50px"
        android:background="@drawable/white_shape_drawable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_20px"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="63.03dp"
                android:layout_height="24dp"
                android:src="@mipmap/app_icon_hor"
                android:visibility="invisible"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/dd_dimen_108px"
            android:layout_height="@dimen/dd_dimen_108px"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_default_avatar" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:text=""
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dd_dimen_52px"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:gravity="left"
            android:text=""
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_32px" />


        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/dd_dimen_26px" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dd_dimen_60px"
            android:paddingBottom="@dimen/dd_dimen_60px">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计赚钱"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_26px" />

                <TextView
                    android:id="@+id/view_share_pedometer_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:text="1000"
                    android:textColor="@color/red_ying"
                    android:textSize="@dimen/text_size_34px" />

            </LinearLayout>
            <View
                android:layout_width="@dimen/dd_dimen_2px"
                android:layout_height="match_parent"
                android:background="@color/orderline_e1e1e1">
            </View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计步数"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_26px" />

                <TextView
                    android:id="@+id/view_share_pedometer_steps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:textColor="@color/red_ying"
                    android:textSize="@dimen/text_size_34px" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dd_dimen_2px"
                android:layout_height="match_parent"
                android:background="@color/orderline_e1e1e1">
            </View>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="参与天数"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_26px" />

                <TextView
                    android:id="@+id/view_share_pedometer_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:text="1000"
                    android:textColor="@color/red_ying"
                    android:textSize="@dimen/text_size_34px" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/ll_btn_show"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_1px"
                    android:background="@color/orderline_e1e1e1"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:layout_marginBottom="@dimen/dd_dimen_20px">
                </View>

                <TextView
                    android:id="@+id/tv_invite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_90px"
                    android:layout_marginBottom="@dimen/dd_dimen_30px"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:background="@drawable/shape_button_main_unclick"
                    android:gravity="center"
                    android:padding="@dimen/dd_dimen_20px"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_36px" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_pedometer_qr_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="@color/neu_f4f4f4"
                android:paddingTop="@dimen/dd_dimen_20px"
                android:paddingBottom="@dimen/dd_dimen_30px"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dd_dimen_20px"
                    android:textColor="@color/neu_333333"
                    android:text="@string/label_hint_long_press_reg_qrcode"
                    android:textSize="@dimen/dd_dimen_24px" />

                <ImageView
                    android:id="@+id/iv_share_pedometer_qr_code"
                    android:layout_width="@dimen/dd_dimen_250px"
                    android:layout_height="@dimen/dd_dimen_250px"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:padding="@dimen/dd_dimen_20px"
        android:src="@mipmap/ic_delete" />
</RelativeLayout>