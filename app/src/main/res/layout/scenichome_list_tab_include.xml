<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <RelativeLayout
                android:id="@+id/rel_master_tab_layout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/iv_localscenic"
                        android:layout_width="@dimen/dd_dimen_40px"
                        android:layout_height="@dimen/dd_dimen_40px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/local_scenic_image_select" />

                    <TextView
                        android:id="@+id/tv_localscenic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:text="本地景点"
                        android:textColor="@color/ac_title_bg_color"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rel_master_tab_layout3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/iv_surroudingcitys"
                        android:layout_width="@dimen/dd_dimen_25px"
                        android:layout_height="@dimen/dd_dimen_25px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/surrodingcity_image_normal" />

                    <TextView
                        android:id="@+id/tv_surroudingcitys"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dd_dimen_15px"
                        android:text="周边城市"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_layout"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tab_now"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_6px"
                android:layout_weight="1"
                android:background="@color/ac_title_bg_color" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_6px"
                android:layout_weight="1"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:background="@color/orderline_e1e1e1" />

    <com.quanyan.yhy.ui.views.NoScrollViewPager
        android:id="@+id/vp_master_tab"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

</LinearLayout>