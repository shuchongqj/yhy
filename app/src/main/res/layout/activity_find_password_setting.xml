<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password_digits"
            android:maxLength="11"
            android:enabled="false"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_666666"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_30px" />

    </LinearLayout>


    <View style="@style/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password_digits"
            android:hint="请输入验证码"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_666666"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/tv_get_validate_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:gravity="center"
            android:minEms="5"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_15px"
            android:paddingRight="@dimen/dd_dimen_15px"
            android:paddingTop="@dimen/dd_dimen_10px"
            android:text="@string/req_dynamic_code"
            android:textColor="@color/quan_red"
            android:textSize="@dimen/text_size_24px" />
    </LinearLayout>

    <View style="@style/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/new_password"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password_digits"
            android:hint="@string/input_new_password"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_666666"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_eye"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:scaleType="center"
            android:src="@mipmap/ic_change_password_eye" />
    </LinearLayout>

    <View style="@style/split_line" />

</LinearLayout>