<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_90px"
        android:orientation="vertical"
        android:id="@+id/rl_app_setting">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_12px"
            android:layout_toLeftOf="@+id/ll_right_panel"
            android:textColor="@color/neu_666666"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxWidth="@dimen/dd_dimen_460px"
            android:textSize="@dimen/text_size_24px" />

        <LinearLayout
            android:id="@+id/ll_right_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:padding="@dimen/dd_dimen_0px">
            <CheckBox
                style="@style/SwitchCheckboxTheme"
                android:id="@+id/cb_switch"
                android:visibility="gone"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/iv_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/arrow_go"
                android:layout_gravity="center"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/split_line" />

</LinearLayout>