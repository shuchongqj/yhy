<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lv_complaint_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:clipToPadding="false"
        android:listSelector="@drawable/transparent"
        android:divider="@color/orderline_e1e1e1"
        android:dividerHeight="@dimen/dd_dimen_1px"
        android:fadingEdge="none"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="none"
        android:visibility="visible"></ListView>

    <LinearLayout
        android:id="@+id/ll_comlaint_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dd_dimen_70px"
        android:layout_marginRight="@dimen/dd_dimen_70px"
        android:layout_marginTop="@dimen/dd_dimen_110px"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_complaint_ok" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_100px"
            android:text="@string/label_status_submited"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_44px"
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:text="@string/label_submit_complaint_successful"
            android:textSize="@dimen/dd_dimen_28px" />
    </LinearLayout>
</RelativeLayout>
