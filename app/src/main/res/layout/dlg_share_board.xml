<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/yhy_size_20px"
            android:text="分享到"
            android:textColor="@color/neu_999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/yhy_size_20px"
            android:paddingLeft="@dimen/yhy_size_14px"
            android:paddingRight="@dimen/yhy_size_14px">

            <!--微信-->
            <LinearLayout
                android:id="@+id/llyt_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_new_weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="微信"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--朋友圈-->
            <LinearLayout
                android:id="@+id/llyt_weixin_circle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_new_wxcircle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="朋友圈"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--微博-->
            <LinearLayout
                android:id="@+id/llyt_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_new_weibo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="微博"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--qq-->
            <LinearLayout
                android:id="@+id/llyt_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_new_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="QQ"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_extra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/yhy_size_20px"
        android:paddingLeft="@dimen/yhy_size_14px"
        android:paddingRight="@dimen/yhy_size_14px"
        android:visibility="visible">

        <!--短信-->
        <LinearLayout
            android:id="@+id/llyt_duanxin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/yhy_size_55px"
                android:layout_height="@dimen/yhy_size_55px"
                android:src="@mipmap/share_sms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yhy_size_8px"
                android:maxLines="1"
                android:text="短信"
                android:textColor="@color/neu_4a4a4a"
                android:textSize="@dimen/yhy_size_12px" />
        </LinearLayout>

        <!--复制链接-->
        <LinearLayout
            android:id="@+id/llyt_copy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/yhy_size_55px"
                android:layout_height="@dimen/yhy_size_55px"
                android:src="@mipmap/share_copy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yhy_size_8px"
                android:maxLines="1"
                android:text="复制链接"
                android:textColor="@color/neu_4a4a4a"
                android:textSize="@dimen/yhy_size_12px" />
        </LinearLayout>

        <!--占位-->
        <LinearLayout
            android:id="@+id/llyt_space_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/yhy_size_21px"
            android:paddingRight="@dimen/yhy_size_21px"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/yhy_size_55px"
                android:layout_height="@dimen/yhy_size_55px"
                android:src="@mipmap/share_sms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yhy_size_8px"
                android:maxLines="1"
                android:text="短信"
                android:textColor="@color/neu_4a4a4a"
                android:textSize="@dimen/yhy_size_12px" />
        </LinearLayout>

        <!--占位-->
        <LinearLayout
            android:id="@+id/llyt_space_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/yhy_size_21px"
            android:paddingRight="@dimen/yhy_size_21px"
            android:visibility="invisible">

            <ImageView
                android:layout_width="@dimen/yhy_size_55px"
                android:layout_height="@dimen/yhy_size_55px"
                android:src="@mipmap/share_sms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/yhy_size_8px"
                android:maxLines="1"
                android:text="短信"
                android:textColor="@color/neu_4a4a4a"
                android:textSize="@dimen/yhy_size_12px" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_extra_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/yhy_size_1px"
            android:background="@color/neu_f0f0f0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/yhy_size_20px"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/yhy_size_20px"
            android:paddingLeft="@dimen/yhy_size_14px"
            android:paddingRight="@dimen/yhy_size_14px">

            <!--举报-->
            <LinearLayout
                android:id="@+id/llyt_report"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_report" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="举报"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--屏蔽-->
            <LinearLayout
                android:id="@+id/llyt_shield"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_slices" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="屏蔽"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--取消关注-->
            <LinearLayout
                android:id="@+id/llyt_cancle_follow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_cancle_follow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="取消关注"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--删除-->
            <LinearLayout
                android:id="@+id/llyt_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@mipmap/share_delete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="删除"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--赞-->
            <LinearLayout
                android:id="@+id/llyt_praise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_share_praise"
                    android:layout_width="@dimen/yhy_size_55px"
                    android:layout_height="@dimen/yhy_size_55px"
                    android:src="@drawable/share_praise"/>

                <TextView
                    android:id="@+id/tv_share_praise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/yhy_size_8px"
                    android:maxLines="1"
                    android:text="赞"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="@dimen/yhy_size_12px" />
            </LinearLayout>

            <!--占位-->
            <LinearLayout
                android:id="@+id/llyt_extra_circle_placeholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/yhy_size_21px"
                android:paddingRight="@dimen/yhy_size_21px"
                android:visibility="invisible">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/yhy_size_9px"
        android:background="@color/neu_f0f0f0" />

    <TextView
        android:id="@+id/tv_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/yhy_size_15px"
        android:text="取消"
        android:textColor="@color/red_ying" />
</LinearLayout>