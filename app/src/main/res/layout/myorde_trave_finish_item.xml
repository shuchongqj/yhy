<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/dd_dimen_200px"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_25px" >

        <ImageView
            android:id="@+id/eventitem_iv_logo"
            android:layout_width="@dimen/dd_dimen_214px"
            android:layout_height="@dimen/dd_dimen_145px"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_default_150_150" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toRightOf="@id/eventitem_iv_logo"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/eventitem_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Title"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/eventitem_tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:lines="2"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_26px" />
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dimen_70px"

            android:gravity="right|center_vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">





            <TextView
                android:id="@+id/eventitem_tv_subscribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_12px"
                android:background="@drawable/shape_clubhome_event_item_tv_bg"
                android:ellipsize="end"
                android:paddingBottom="@dimen/dd_dimen_10px"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px"
                android:paddingTop="@dimen/dd_dimen_10px"
                android:singleLine="true"
                android:text="预约"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/eventitem_tv_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dd_dimen_12px"
                android:background="@drawable/shape_clubhome_event_item_tv_bg"
                android:ellipsize="end"
                android:paddingBottom="@dimen/dd_dimen_10px"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px"
                android:paddingTop="@dimen/dd_dimen_10px"
                android:singleLine="true"
                android:text="报名"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@color/line_gray" />

</RelativeLayout>