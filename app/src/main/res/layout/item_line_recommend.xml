<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/line_recommend_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_line_recommend_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_300px"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/item_line_recommend_labels_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent_black_35"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:layout_alignBottom="@id/item_line_recommend_img"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/dd_dimen_20px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_line_recommend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_money"
                android:textSize="@dimen/text_size_30px"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dd_dimen_26px"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:textColor="@android:color/white"
                android:text="起"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_line_recommend_merchant_img"
        android:layout_width="@dimen/dd_dimen_140px"
        android:layout_height="@dimen/dd_dimen_140px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dd_dimen_230px"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_recommend_view1"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_line_recommend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阿凡达奥 i 未婚夫 i 啊护卫 u 发哈我 i 俄方哈维 u 发哈我 i 俄 u 好"
            android:textSize="@dimen/text_size_30px"
            android:textColor="@color/neu_333333"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_line_recommend_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已售1000"
                android:textSize="@dimen/text_size_28px"
                android:layout_alignParentLeft="true"
                android:textColor="@color/neu_666666"/>
            <TextView
                android:id="@+id/item_line_recommend_merchant_name"
                android:layout_width="@dimen/dd_dimen_140px"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_28px"
                android:layout_alignParentRight="true"
                android:textColor="@color/neu_666666"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>