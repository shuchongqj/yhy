<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/base_pullrefresh_gridview_parent"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_norm_f4f4f4"
              android:orientation="vertical">

    <com.quanyan.base.view.customview.pulltorefresh.PullToRefreshGridView
        android:id="@+id/base_pullrefresh_gridview"
        xmlns:pullrefresh="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:verticalSpacing="8dp"
        pullrefresh:ptrAnimationStyle="rotate"
        pullrefresh:ptrMode="both">

    </com.quanyan.base.view.customview.pulltorefresh.PullToRefreshGridView>
</LinearLayout>