<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_88px"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_88px"
        android:background="@drawable/find_item_bg_selector"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/frame_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_20px">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/dd_dimen_54px"
                android:layout_height="@dimen/dd_dimen_54px"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/unread_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@android:id/icon"
                android:layout_alignTop="@android:id/icon"
                android:background="@drawable/red_circle"
                android:gravity="center"
                android:minHeight="10dp"
                android:minWidth="10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/dd_dimen_30px"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_30px" />

                <ImageView
                    android:id="@+id/menu_array"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:background="@mipmap/arrow_go" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/menu_array"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/tv_cotent_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/text_size_24px" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/iv_new_msg"
                        android:layout_width="@dimen/dd_dimen_15px"
                        android:layout_height="@dimen/dd_dimen_15px"
                        android:layout_toRightOf="@+id/tv_cotent_value"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:src="@mipmap/jkt_move_warning1" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_value"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/menu_array"
                    android:background="@drawable/tt_message_notify"
                    android:gravity="center"
                    android:minWidth="18dp"
                    android:paddingBottom="1dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_new_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_toLeftOf="@id/menu_array" />
            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/desc_size" />

    </LinearLayout>

    <!--<View
        android:id="@+id/item_division"
        style="@style/split_line"
        android:layout_marginLeft="@dimen/dd_dimen_100px"></View>-->
</LinearLayout>