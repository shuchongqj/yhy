<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/plane_hotel_detail_refertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/plane_hotel_detail_refertitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/label_text_wonderfulplay_flight_reference_title"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_32px"/>

        <ImageView
            android:id="@+id/plane_hotel_detail_refertitle_more_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:layout_toRightOf="@id/plane_hotel_detail_refertitle_text"
            android:src="@mipmap/arrow_righ_gray_bg"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/plane_hotel_detail_refer_filght"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/plane_reference_hotels_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="@string/label_text_wonderful_hotel_info_title"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_32px"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plane_hotel_detail_refer_hotels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>