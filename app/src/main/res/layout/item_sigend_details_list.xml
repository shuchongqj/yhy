<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_128px"
            android:layout_marginLeft="@dimen/dd_dimen_35px"
        >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">



                <RelativeLayout
                    android:id="@+id/rl_eat_product"
                    android:layout_width="@dimen/dd_dimen_80px"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:layout_alignParentLeft="true"
                    >
                    <TextView
                        android:id="@+id/tv_eat_product_name11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="今天"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/text_size_30px" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@+id/tv_eat_product_name11"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:singleLine="true"

                        android:text="00:11"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/text_size_24px"
                        android:id="@+id/tv_eat_product_time" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tv_eat_proaaaduct_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_60px"
                    android:layout_marginRight="@dimen/dd_dimen_180px"
                    android:layout_toRightOf="@+id/rl_eat_product"
               >

                    <TextView
                        android:id="@+id/tv_eat_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="计步器"
                        android:textColor="@color/neu_666666"
                        android:textSize="@dimen/text_size_30px" />




                    <TextView
                        android:id="@+id/tv_eat_product_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tv_eat_product_name"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:singleLine="true"
                        android:text="2016.1.1  14:00:11"
                        android:textColor="@color/neu_666666"
                        android:textSize="@dimen/text_size_24px" />


                </RelativeLayout>



            </RelativeLayout>

            <TextView
                android:id="@+id/tv_eat_product_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="+0"
                android:textColor="@color/ac_title_bg_color"
                android:textSize="@dimen/text_size_36px"
                android:textStyle="bold" />


        </LinearLayout>


        <View
            android:id="@+id/relativeLayout3"
            style="@style/split_line"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout"></View>


    </RelativeLayout>


</LinearLayout>