<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/scenic_top_translate_selector"
        android:orientation="vertical"
        android:paddingBottom="20dip"
        android:paddingTop="20dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hotelhome_image"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="130dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hotelhome_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#636363"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <TextView
                        android:id="@+id/hotelhome_secondtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textColor="#bebebe"
                        android:textSize="@dimen/dd_dimen_24px" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotelhome_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dd_dimen_30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="3dip"
                    android:text="起"
                    android:textColor="#bebebe"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/hotelhome_yuding_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/hotelroom_book_image"/>

                <LinearLayout
                    android:layout_width="50dip"
                    android:layout_height="35dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dip"
                    android:visibility="gone"
                    android:background="@mipmap/hotel_selecthome_childitem_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="预订"
                        android:textColor="#fff"
                        android:textSize="@dimen/dd_dimen_28px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="在线支付"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_24px" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>