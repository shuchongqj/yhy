<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:paddingLeft="@dimen/dd_dimen_10px"
              android:paddingRight="@dimen/dd_dimen_10px"
              android:gravity="center_horizontal"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/view_master_consult_item_img"
        android:layout_width="@dimen/dd_dimen_280px"
        android:layout_height="@dimen/dd_dimen_210px"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/view_master_consult_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/neu_666666"
        android:gravity="center"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_28px"/>

    <TextView
        android:id="@+id/view_master_consult_item_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/neu_666666"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"
        android:textSize="@dimen/text_size_20px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"/>

</LinearLayout>