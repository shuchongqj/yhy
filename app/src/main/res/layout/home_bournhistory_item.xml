<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/line_gray" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/dd_dimen_150px"
                android:layout_height="@dimen/dd_dimen_150px"
                android:src="@mipmap/tv_image_warn"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:background="@drawable/shape_home_site_bg"
                android:maxLines="1"
                android:text="哇哇哇"
                android:textColor="@color/color_norm_bebebe"
                android:textSize="@dimen/dd_dimen_26px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"   android:visibility="gone"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/line_gray" />
    </LinearLayout>
</RelativeLayout>