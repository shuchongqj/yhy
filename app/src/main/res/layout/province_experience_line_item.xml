<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_norm_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_content_bg"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_360px"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dd_dimen_65px"
            android:layout_alignBottom="@+id/iv_content_bg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:alpha="0.7"
            android:background="@drawable/shape_travevity_title_bg"
            android:orientation="horizontal"
            android:padding="@dimen/dd_dimen_10px">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:textColor="@color/color_norm_ffffff"
                android:textSize="@dimen/dd_dimen_34px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:text="起/人"
                android:textColor="@color/color_norm_ffffff"
                android:textSize="@dimen/dd_dimen_20px" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_10px">

        <TextView
            android:id="@+id/tv_line_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/dd_dimen_10px"
            android:textColor="@color/color_norm_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/tv_line_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawablePadding="@dimen/dd_dimen_20px"
            android:singleLine="true"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_24px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"/>
    </LinearLayout>

</LinearLayout>