<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/wonderful_play_detail_bottom_speekyourself_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/color_norm_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/wonderful_play_geek_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawablePadding="5dp"
            android:text="@string/text_wonderful_play_bottom_title"
            android:textColor="@color/tv_color_gray63"
            android:textSize="@dimen/text_size_30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wonderful_play_detail_bottom_user_head"
                android:layout_width="@dimen/dd_dimen_111px"
                android:layout_height="@dimen/dd_dimen_111px"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_default_128_128"
                android:textColor="@color/main"
                android:textSize="@dimen/text_size_30px" />

            <TextView
                android:id="@+id/wonderful_play_detail_bottom_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/text_size_28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:paddingTop="@dimen/dd_dimen_20px"></LinearLayout>

        <com.quanyan.yhy.view.JustifyTextView
            android:id="@+id/wonderful_play_detail_bottom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px" />
    </LinearLayout>
</LinearLayout>