<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/view_pedometer_share_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black_60">


    <LinearLayout
        android:id="@+id/view_pedometer_share_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_50px"
        android:layout_marginRight="@dimen/dd_dimen_50px"
        android:background="@drawable/user_share_drawable"
        android:orientation="vertical">

        <include layout="@layout/item_mine_info"></include>

        <LinearLayout
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_mine_qr"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/dd_dimen_358px"
                    android:layout_height="@dimen/dd_dimen_358px" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_bottom"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_358px"
                android:background="@color/white"/>

            <RelativeLayout
                android:id="@+id/rl_share_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dd_dimen_34px">

                <TextView
                    android:id="@+id/view_share_pedometer_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_16px"
                    android:layout_marginRight="@dimen/dd_dimen_16px"
                    android:text="分享到"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_30px"/>

                <View
                    android:layout_width="@dimen/dd_dimen_172px"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view_share_pedometer_share_text"
                    android:background="@color/orderline_e1e1e1"/>

                <View
                    android:layout_width="@dimen/dd_dimen_172px"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view_share_pedometer_share_text"
                    android:background="@color/orderline_e1e1e1"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/view_share_pedometer_share_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dd_dimen_26px"
                android:paddingRight="@dimen/dd_dimen_26px"
                android:paddingBottom="@dimen/dd_dimen_50px"
                android:paddingTop="@dimen/dd_dimen_50px">

                <LinearLayout
                    android:id="@+id/view_share_pedometer_cicles_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_master_circles"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="圈子"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_wechat_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_wechat"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="微信"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_wechat_circles_layut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_wechat_firends"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="朋友圈"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_qq_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_qq"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="QQ"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/view_share_pedometer_weibo_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_70px"
                        android:layout_height="@dimen/dd_dimen_70px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_pedo_share_weibo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dd_dimen_10px"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="微博"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/text_size_24px"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_share_pedometer_qr_code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="@dimen/dd_dimen_20px"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/view_share_pedometer_qr_code"
                    android:layout_width="@dimen/dd_dimen_250px"
                    android:layout_height="@dimen/dd_dimen_250px"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/app_icon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>