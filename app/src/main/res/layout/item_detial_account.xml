<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_detial_account_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="类型"
        android:textColor="@color/neu_999999"
        android:textSize="@dimen/dd_dimen_30px" />

    <TextView
        android:id="@+id/tv_detial_account_behind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/margin_120dp"
        android:lineSpacingExtra="5dp"
        android:text="购物"
        android:textColor="@color/neu_333333"
        android:textSize="@dimen/dd_dimen_30px" />
</RelativeLayout>
