<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginLeft="15dp"
        android:id="@+id/personal_order_ivOrderImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/personal_order_tvOrderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天台球吧周三散场活动"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/personal_order_tvCountdownStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="离活动开始还有"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/personal_order_tvCountdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16小时30分"
                android:textColor="@color/red"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>