<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/orderline_e1e1e1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/tv_order_left_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/color_norm_ffffff"
            android:gravity="center">

            <ImageView
                android:id="@+id/tv_order_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hotel_order_pay_details_image"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dd_dimen_20px"
                android:textColor="@color/title_right_btn_text_color"
                android:textSize="@dimen/dd_dimen_44px" />

            <TextView
                android:id="@+id/tv_order_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:textColor="@color/title_right_btn_text_color"
                android:textSize="@dimen/dd_dimen_34px"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dd_dimen_1px"
            android:layout_height="@dimen/dd_dimen_100px"
            android:layout_gravity="center_vertical"
            android:background="@color/color_norm_eeeeee" />

        <RelativeLayout
            android:id="@+id/rl_right_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/ac_title_bg_color">

            <Button
                android:id="@+id/tv_order_submit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/scenic_top_translate_selector"
                android:textColor="@color/white"
                android:textSize="@dimen/dd_dimen_34px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>