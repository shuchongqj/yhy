<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_look_logistical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_160px"
    android:paddingLeft="@dimen/dd_dimen_30px"

    android:paddingRight="@dimen/dd_dimen_30px"
    android:visibility="gone">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_split_line_height"
        android:background="@color/divider" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_logistical_car" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_toRightOf="@id/iv_car"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tracking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neu_777777"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_18px"
            android:textColor="@color/neu_777777"
            android:textSize="@dimen/text_size_28px" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow_go" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/public_split_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />
</RelativeLayout>
