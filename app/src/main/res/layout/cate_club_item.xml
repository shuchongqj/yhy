<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/line_gray"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dd_dimen_20px">

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/dd_dimen_88px"
                android:layout_height="@dimen/dd_dimen_88px"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_default_128_128" />

            <ImageView
                android:id="@+id/iv_item2"
                android:layout_width="@dimen/dd_dimen_20px"
                android:layout_height="@dimen/dd_dimen_20px"
                android:layout_alignEnd="@+id/iv_item"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/iv_item"
                android:layout_marginTop="5dp"
                android:background="@mipmap/icon_verify"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:maxLines="1"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_26px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:background="@color/line_gray"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>