<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dlg_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_100px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="请输入支付密码"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/ac_title_bg_color" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_25px"
            android:text="提现"
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/dd_dimen_30px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px"
                android:layout_gravity="bottom"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_5px"
                android:layout_gravity="bottom"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_50px"
                android:textStyle="bold" />

        </LinearLayout>

        <com.quanyan.yhy.ui.wallet.view.gridpasswordview.GridPasswordView
            android:id="@+id/gpv_customUi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dd_dimen_40px"
            android:layout_marginRight="@dimen/dd_dimen_40px"
            android:layout_marginTop="@dimen/dd_dimen_60px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            app:gpvLineColor="@color/orderline_e1e1e1"
            android:background="@drawable/gridpassword_bg"
            app:gpvLineWidth="@dimen/dd_dimen_2px"
            app:gpvTextColor="@color/black"
            app:gpvTextSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/tv_forget_pas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:gravity="right"
            android:text="忘记密码？"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_30px" />
    </LinearLayout>
</LinearLayout>