<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dd_dimen_20px"
              android:paddingLeft="@dimen/dd_dimen_30px"
              android:paddingRight="@dimen/dd_dimen_30px"
              android:paddingTop="@dimen/dd_dimen_20px">

    <RelativeLayout
        android:id="@+id/cell_club_detail_member_user_head_layout"
        android:layout_width="@dimen/head_img_size"
        android:layout_height="@dimen/head_img_size">

        <ImageView
            android:id="@+id/cell_club_detail_member_user_head"
            android:layout_width="@dimen/head_img_size"
            android:layout_height="@dimen/head_img_size"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_128_128"/>

        <ImageView
            android:id="@+id/cell_club_detail_member_user_sex"
            android:layout_width="@dimen/sex_img_size"
            android:layout_height="@dimen/sex_img_size"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_img_size"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_club_detail_member_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@id/cell_club_detail_member_user_head_layout"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/tv_color_gray6"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/cell_club_detail_member_user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/cell_club_detail_member_user_head_layout"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@id/cell_club_detail_member_user_head_layout"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/tv_color_gray6"
            android:textSize="@dimen/text_size_24px"/>
    </LinearLayout>

</LinearLayout>