<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orderbackground_f4f4f4"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dd_dimen_20px"
        android:layout_marginTop="@dimen/dd_dimen_20px">

        <ImageView
            android:id="@+id/sa_iv_good"
            android:layout_width="@dimen/dd_dimen_120px"
            android:layout_height="@dimen/dd_dimen_120px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:background="@mipmap/icon_default_215_215"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toRightOf="@+id/sa_iv_good"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sa_tv_good_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:gravity="center_vertical"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_secondtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_5px"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_30px"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_8px"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sa_tv_good_currentprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="@dimen/dd_dimen_36px" />

                <TextView
                    android:id="@+id/tv_label_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:text="èµ·"
                    android:textColor="@color/color_norm_636363"
                    android:textSize="@dimen/dd_dimen_22px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/sa_tv_good_originalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_35px"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:textColor="@color/color_norm_bebebe"
                    android:textSize="@dimen/dd_dimen_24px"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>