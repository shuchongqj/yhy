<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/number_choose_reduce"
        android:layout_width="@dimen/dd_dimen_60px"
        android:layout_height="@dimen/dd_dimen_60px"
        android:background="@mipmap/number_reduce_normal"
        android:gravity="center"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="@dimen/dd_dimen_85px"
        android:layout_height="@dimen/dd_dimen_60px"
        android:background="@drawable/number_choose_text_bg"
        android:gravity="center">

        <TextView
            android:id="@+id/number_choose_num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/dd_dimen_75px"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/tv_color_gray3"
            android:textSize="@dimen/text_size_30px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_choose_increase"
        android:layout_width="@dimen/dd_dimen_60px"
        android:layout_height="@dimen/dd_dimen_60px"
        android:background="@mipmap/number_add_normal"
        android:gravity="center"
        android:orientation="horizontal" />

</LinearLayout>
