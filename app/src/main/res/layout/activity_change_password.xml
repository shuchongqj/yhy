<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/color_norm_f4f4f4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/old_password"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <EditText
            android:id="@+id/et_old_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password_digits"
            android:maxLength="16"
            android:hint="@string/hint_input_old_password"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_666666"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_eye_old_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:scaleType="center"
            android:src="@mipmap/ic_change_password_eye" />

    </LinearLayout>


    <View style="@style/split_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/new_password"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:digits="@string/password_digits"
            android:hint="@string/input_new_password"
            android:maxLength="16"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_666666"
            android:textColorHint="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/iv_eye_new_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:scaleType="center"
            android:src="@mipmap/ic_change_password_eye" />
    </LinearLayout>

    <View style="@style/split_line" />

    <TextView
        android:id="@+id/tv_forget_pas"
        android:textSize="12dp"
        android:text="忘记密码"
        android:textColor="@color/gray"
        android:layout_gravity="right"
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_88px"
