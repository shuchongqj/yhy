<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dd_dimen_20px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dd_dimen_8px"
                android:layout_height="@dimen/dd_dimen_30px"
                android:layout_gravity="center_vertical"
                android:src="@drawable/scenicorder_title_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_15px"
                android:text="省钱省心看这里"
                android:textColor="@color/order_666666"
                android:textSize="@dimen/dd_dimen_30px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_theme_bg1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_240px"
                android:layout_weight="6">

                <ImageView
                    android:id="@+id/iv_theme_bg_url1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/orderline_e1e1e1" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@color/transparent_six" />

                <TextView
                    android:id="@+id/tv_theme_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:padding="@dimen/dd_dimen_10px"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_30px" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dd_dimen_10px"
                android:layout_height="@dimen/dd_dimen_240px" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_240px"
                android:layout_weight="3.5"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_theme_bg2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_theme_bg_url2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:scaleType="centerCrop"
                        android:src="@color/orderline_e1e1e1" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="@color/transparent_six" />

                    <TextView
                        android:id="@+id/tv_theme_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:padding="@dimen/dd_dimen_10px"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dd_dimen_10px" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rl_theme_bg3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_theme_bg_url3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            android:src="@color/orderline_e1e1e1" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@color/transparent_six" />

                        <TextView
                            android:id="@+id/tv_theme_name3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:padding="@dimen/dd_dimen_10px"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/dd_dimen_10px"
                        android:layout_height="fill_parent" />

                    <RelativeLayout
                        android:id="@+id/rl_theme_bg4"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/iv_theme_bg_url4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="centerCrop"
                            android:src="@color/orderline_e1e1e1" />

                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@color/transparent_six" />

                        <TextView
                            android:id="@+id/tv_theme_name4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:ellipsize="end"
                            android:padding="@dimen/dd_dimen_10px"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/dd_dimen_30px" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>