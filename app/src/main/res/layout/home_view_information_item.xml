<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/dd_dimen_20px"
              android:paddingLeft="@dimen/dd_dimen_20px"
              android:paddingRight="@dimen/dd_dimen_20px"
              android:paddingTop="@dimen/dd_dimen_20px">

    <ImageView
        android:id="@+id/home_view_information_item_img"
        android:layout_width="@dimen/dd_dimen_188px"
        android:layout_height="@dimen/dd_dimen_140px"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/home_view_information_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/home_view_information_item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/home_view_information_item_comment_layout"
            android:layout_below="@id/home_view_information_item_title"
            android:layout_marginTop="@dimen/dd_dimen_5px"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_26px"/>

        <RelativeLayout
            android:id="@+id/home_view_information_item_comment_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_view_information_item_comment_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_3px"
                android:src="@mipmap/icon_live_comment"/>

            <TextView
                android:id="@+id/home_view_information_item_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_toRightOf="@id/home_view_information_item_comment_img"
                android:includeFontPadding="false"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_24px"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>