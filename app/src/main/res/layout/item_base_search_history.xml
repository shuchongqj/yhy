<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_88px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_88px">

        <ImageView
            android:id="@+id/iv_icon_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_travel_time"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neu_333333"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dd_dimen_30px"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/iv_icon_before"
            android:layout_gravity="center_vertical"/>

        <View
            style="@style/split_line"
            android:layout_alignParentBottom="true"></View>

    </RelativeLayout>

</RelativeLayout>


