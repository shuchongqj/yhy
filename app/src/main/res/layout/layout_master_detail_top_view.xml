<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.quanyan.base.view.customview.imgpager.ImgPagerView
        android:id="@+id/master_detail_top_pager_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.quanyan.base.view.customview.imgpager.ImgPagerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/master_detail_top_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="昆明－大理  定制运动"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/tc_e1e1e1"/>

    <LinearLayout
        android:id="@+id/master_detail_top_user_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <ImageView
            android:id="@+id/master_detail_top_user_img"
            android:layout_width="@dimen/dd_dimen_98px"
            android:layout_height="@dimen/dd_dimen_98px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_avatar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingTop="@dimen/dd_dimen_10px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/master_detail_top_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="你哈发的"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_28px"/>

                <ImageView
                    android:id="@+id/master_detail_top_use_sex"
                    android:layout_width="@dimen/dd_dimen_30px"
                    android:layout_height="@dimen/dd_dimen_30px"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_sex_man_bg"/>

                <TextView
                    android:id="@+id/master_detail_top_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:singleLine="true"
                    android:text="昆明"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_28px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_30px"
                        android:layout_height="@dimen/dd_dimen_30px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_flight"/>

                    <TextView
                        android:id="@+id/master_detail_top_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:singleLine="true"
                        android:text="289分"
                        android:textColor="@color/neu_40c5d7"
                        android:textSize="@dimen/text_size_26px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_30px"
                        android:layout_height="@dimen/dd_dimen_30px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_flight"/>

                    <TextView
                        android:id="@+id/master_detail_top_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:singleLine="true"
                        android:text="123条评论"
                        android:textColor="@color/neu_40c5d7"
                        android:textSize="@dimen/text_size_26px"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_30px"
                        android:layout_height="@dimen/dd_dimen_30px"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_flight"/>

                    <TextView
                        android:id="@+id/master_detail_top_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:singleLine="true"
                        android:text="服务1241次"
                        android:textColor="@color/neu_40c5d7"
                        android:textSize="@dimen/text_size_26px"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>

</LinearLayout>