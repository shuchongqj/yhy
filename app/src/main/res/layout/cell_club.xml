<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_club_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dd_dimen_20px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_20px">

    <ImageView
        android:id="@+id/cell_club_img"
        android:layout_width="@dimen/dd_dimen_114px"
        android:layout_height="@dimen/dd_dimen_114px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_128_128" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_club_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/club_join_color_stroke_bg"
            android:paddingBottom="@dimen/dd_dimen_6px"
            android:paddingLeft="@dimen/dd_dimen_16px"
            android:paddingRight="@dimen/dd_dimen_16px"
            android:paddingTop="@dimen/dd_dimen_6px"
            android:text="+ 加入"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/cell_club_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_toLeftOf="@id/cell_club_join"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px" />

        <TextView
            android:id="@+id/cell_club_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cell_club_name"
            android:layout_below="@id/cell_club_name"
            android:layout_marginTop="@dimen/dd_dimen_5px"
            android:drawableLeft="@mipmap/ic_persons_item"
            android:drawablePadding="5dp"
            android:layout_marginLeft="2dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/cell_club_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/cell_club_people_num"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toRightOf="@id/cell_club_people_num"
            android:drawableLeft="@mipmap/ic_verify_item"
            android:drawablePadding="5dp"
            android:text="@string/officially_certified"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/cell_club_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cell_club_name"
            android:layout_below="@id/cell_club_people_num"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:singleLine="true"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />
    </RelativeLayout>
</LinearLayout>