<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_130px"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_128px"
            android:layout_marginLeft="@dimen/dd_dimen_35px"
            android:layout_marginRight="@dimen/dd_dimen_30px"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_eat_product_bg"
                android:layout_width="@dimen/dd_dimen_80px"
                android:layout_height="@dimen/dd_dimen_80px"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default_128_128" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_128px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_35px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_signed_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_20px"
                    android:layout_toLeftOf="@+id/tv_signed_complete"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="每日签到"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_30px" />


                <RelativeLayout
                    android:id="@+id/ll_address_de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/dd_dimen_20px"
                    android:layout_toLeftOf="@+id/tv_signed_complete"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_signed_fraction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:text="+10"
                        android:textColor="@color/ac_title_bg_color"
                        android:textSize="@dimen/text_size_30px"
                        android:textStyle="bold" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_signed_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_tv_integral_already_complete"
                    android:gravity="center"
                    android:paddingTop="@dimen/dd_dimen_10px"
                    android:paddingBottom="@dimen/dd_dimen_10px"
                    android:paddingRight="@dimen/dd_dimen_15px"
                    android:paddingLeft="@dimen/dd_dimen_15px"
                    android:text="已完成"
                    android:textColor="@color/tv_color_gray9"
                    android:textSize="@dimen/dd_dimen_24px"></TextView>

                <TextView
                    android:id="@+id/tv_signed_go_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_alignTop="@+id/tv_signed_complete"
                    android:background="@drawable/shape_tv_integral_go_complete"
                    android:gravity="center"
                    android:paddingTop="@dimen/dd_dimen_10px"
                    android:paddingBottom="@dimen/dd_dimen_10px"
                    android:paddingRight="@dimen/dd_dimen_15px"
                    android:paddingLeft="@dimen/dd_dimen_15px"
                    android:text="去完成"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dd_dimen_24px"></TextView>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:id="@+id/relativeLayout3"
            style="@style/split_line"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout"></View>

    </RelativeLayout>


</LinearLayout>