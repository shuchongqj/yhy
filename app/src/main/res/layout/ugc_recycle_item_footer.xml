<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="36dp">

    <LinearLayout
        android:id="@+id/ll_location_ugc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

        <View
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:background="@mipmap/location_eat"/>

        <TextView
            android:id="@+id/tv_location_ugc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:maxLength="15"
            android:ellipsize="end"
            android:textColor="@color/gray"
            android:layout_marginLeft="5dp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_comment_ugc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/ic_show_comment"/>

            <TextView
                android:id="@+id/tv_comment_num_ugc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_support_ugc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">

            <ImageView
                android:id="@+id/iv_support_ugc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/bg_cell_live_like_selector"/>

            <TextView
                android:id="@+id/tv_support_num_ugc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12dp"
                android:textColor="@color/gray"
                android:text="0"
                android:layout_marginLeft="5dp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_more_ugc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ImageView
                android:id="@+id/iv_more_ugc"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="2dp"
                android:src="@mipmap/ic_more_menu"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_D"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>