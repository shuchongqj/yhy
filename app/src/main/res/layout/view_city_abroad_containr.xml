<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dd_dimen_26px">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dd_dimen_20px"
            android:text="北京"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_26px" />

        <com.quanyan.base.view.customview.NoScrollGridView
            android:id="@+id/grid_scenic_name"
            android:paddingTop="@dimen/dd_dimen_26px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:visibility="gone"
            android:horizontalSpacing="@dimen/dd_dimen_10px"
            android:verticalSpacing="@dimen/dd_dimen_20px"
            android:cacheColorHint="@color/transparent"
            android:listSelector="@color/transparent">
        </com.quanyan.base.view.customview.NoScrollGridView>
    </LinearLayout>


</LinearLayout>