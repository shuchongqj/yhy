<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neu_f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_400px"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_80px"
            android:src="@mipmap/icon_auth_fail" />

        <TextView
            android:id="@+id/tv_authfaild_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dd_dimen_44px"
            android:layout_marginRight="@dimen/dd_dimen_44px"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:text="您的信息已上传"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px"></TextView>


            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/dd_dimen_30px">

            </TextView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:background="@color/orderline_e1e1e1"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="身份证号"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px"></TextView>


            <TextView
                android:id="@+id/tv_id_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/dd_dimen_30px">

            </TextView>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:background="@color/orderline_e1e1e1"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="有效期"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px"></TextView>


            <TextView
                android:id="@+id/tv_vaild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/dd_dimen_30px">

            </TextView>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button

            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_86px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginLeft="@dimen/dd_dimen_25px"
            android:layout_marginRight="@dimen/dd_dimen_25px"
            android:background="@drawable/btn_orange_selector"
            android:text="确认"
            android:textColor="@color/black"
            android:textSize="@dimen/dd_dimen_36px" />
    </LinearLayout>

</LinearLayout>