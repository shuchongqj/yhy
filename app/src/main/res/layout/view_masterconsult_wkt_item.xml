<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_master_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxWidth="@dimen/dd_dimen_350px"
            android:text="周末亲子游"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_master_consult_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231"
                android:textColor="@color/neu_ff9900"
                android:textSize="@dimen/text_size_24px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人已咨询"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_24px" />
        </LinearLayout>
    </RelativeLayout>


    <com.quanyan.base.view.customview.NoScrollGridView
        android:id="@+id/nsg_dest_list1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:cacheColorHint="#00000000"
        android:gravity="left"
        android:horizontalSpacing="@dimen/dd_dimen_20px"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/dd_dimen_20px">
    </com.quanyan.base.view.customview.NoScrollGridView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>

</LinearLayout>