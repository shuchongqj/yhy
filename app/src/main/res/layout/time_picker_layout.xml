<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheelpedometer="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >
    
    <com.pajk.pedometer.view.timepicker.WheelView
        android:id="@+id/wheel_view_year"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        wheelpedometer:lineSplitHeightpedometer="@dimen/wheel_line_split_height"
        wheelpedometer:splitLineColorpedometer="@color/split_line_gray"
        wheelpedometer:textColorFirstpedometer="@color/light_gray"
        wheelpedometer:textColorSecondpedometer="@color/text_second"
        wheelpedometer:textColorThirdpedometer="@color/text_first"
        wheelpedometer:textSizepedometer="@dimen/font_size_s_large" />

    <com.pajk.pedometer.view.timepicker.WheelView
        android:id="@+id/wheel_view_month"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        wheelpedometer:lineSplitHeightpedometer="@dimen/wheel_line_split_height"
        wheelpedometer:splitLineColorpedometer="@color/split_line_gray"
        wheelpedometer:textColorFirstpedometer="@color/light_gray"
        wheelpedometer:textColorSecondpedometer="@color/text_second"
        wheelpedometer:textColorThirdpedometer="@color/text_first"
        wheelpedometer:textSizepedometer="@dimen/font_size_s_large" />

    <com.pajk.pedometer.view.timepicker.WheelView
        android:id="@+id/wheel_view_day"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        wheelpedometer:lineSplitHeightpedometer="@dimen/wheel_line_split_height"
        wheelpedometer:splitLineColorpedometer="@color/split_line_gray"
        wheelpedometer:textColorFirstpedometer="@color/light_gray"
        wheelpedometer:textColorSecondpedometer="@color/text_second"
        wheelpedometer:textColorThirdpedometer="@color/text_first"
        wheelpedometer:textSizepedometer="@dimen/font_size_s_large" />

</LinearLayout>