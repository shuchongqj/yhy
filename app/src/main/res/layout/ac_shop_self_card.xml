<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_shop_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_260px">

        <ImageView
            android:id="@+id/iv_shop_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_260px"
            android:background="@mipmap/icon_default_750_360"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_shop_head_icon"
            android:layout_width="@dimen/dd_dimen_82px"
            android:layout_height="@dimen/dd_dimen_82px"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:src="@mipmap/ic_shop_default_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_shop_bg"
            android:background="@drawable/bg_gradient_white_black"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dd_dimen_30px"
                android:layout_toLeftOf="@id/tv_start_im"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_30px" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <RelativeLayout
            android:id="@+id/rl_contain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_link_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_shop_card"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/text_size_28px" />

            <TextView
                android:id="@+id/tv_link_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:layout_toRightOf="@+id/tv_link_title"
                android:text=""
                android:textSize="@dimen/text_size_28px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_two_code"
            android:layout_width="@dimen/dd_dimen_340px"
            android:layout_height="@dimen/dd_dimen_340px"
            android:layout_below="@+id/rl_contain"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/dd_dimen_14px" />

        <TextView
            android:id="@+id/tv_two_desc"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_capture_title"
            android:layout_below="@+id/iv_two_code"
            android:textSize="@dimen/text_size_30px"
            android:textColor="@color/neu_999999" />


    </RelativeLayout>

</LinearLayout>