<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_master_consult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_advice_item_line"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_consult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_264px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default_215_215" />

            <ImageView
                android:id="@+id/image_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:src="@mipmap/free_consult_image" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_master_consult_service_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_marginTop="@dimen/dd_dimen_18px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_26px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_marginTop="@dimen/dd_dimen_14px"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务区域："
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_22px"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_master_consult_service_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/text_size_22px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_16px"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_master_consult_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dd_dimen_1px"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:includeFontPadding="false"
                android:text="-"
                android:textColor="@color/main"
                android:textSize="@dimen/text_size_28px" />

            <TextView
                android:id="@+id/tv_master_consult_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="积分/-分钟"
                android:textColor="@color/main"
                android:textSize="@dimen/text_size_22px" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_master_consult_service_dis_unit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="-积分"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_22px" />

        <Button
            android:id="@+id/btn_start_master_consult_service"
            android:layout_width="@dimen/dd_dimen_180px"
            android:layout_height="@dimen/dd_dimen_60px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dd_dimen_28px"
            android:layout_marginTop="@dimen/dd_dimen_16px"
            android:background="@drawable/btn_orange_selector"
            android:text="立即咨询"
            android:textColor="@color/White"
            android:textSize="@dimen/text_size_26px" />

    </LinearLayout>

</LinearLayout>