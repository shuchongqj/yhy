<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/popular_around_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/click_selector"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/popular_around_title1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/arrow_down_icon"
                android:text="主题"
                android:textColor="@color/tv_color_gray6"
                android:textSize="@dimen/dd_dimen_30px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popular_around_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/click_selector"
            android:padding="10dp">

            <TextView
                android:id="@+id/popular_around_title2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/arrow_down_icon"
                android:text="出发地"
                android:textColor="@color/tv_color_gray6"
                android:textSize="@dimen/dd_dimen_30px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popular_around_title3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/click_selector"
            android:padding="10dp">

            <TextView
                android:id="@+id/popular_around_title3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/arrow_down_icon"
                android:text="目的地"
                android:textColor="@color/tv_color_gray6"
                android:textSize="@dimen/dd_dimen_30px"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/color_norm_f4f4f4"/>

    <include layout="@layout/base_pullrefresh_listview_layout"/>
</LinearLayout>