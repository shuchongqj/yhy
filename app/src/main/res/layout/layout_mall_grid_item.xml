<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/mall_grid_item_ivTradeImage"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/mall_grid_item_tvTradeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="哈根达斯20元优惠券"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mall_grid_item_tvTradeIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="积分" />
    </LinearLayout>

    <TextView
        android:id="@+id/mall_grid_item_tvExchange"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/background_ying_red_round"
        android:text="立即兑换"
        android:textColor="@color/red" />


</LinearLayout>