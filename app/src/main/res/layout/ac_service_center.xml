<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ac_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_335px"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:background="@mipmap/icon_service_header"/>

        <LinearLayout
            android:layout_below="@+id/iv_header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dd_dimen_25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_platform_work_day"
                android:textSize="@dimen/text_size_28px"
                android:textColor="@color/neu_666666"/>

            <TextView
                android:id="@+id/tv_time_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:text="@string/label_platform_work_time"
                android:textColor="@color/ac_title_bg_color"
                android:textSize="@dimen/text_size_28px"
                android:textStyle="bold"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:gravity="center"
            android:text="@string/labe_service_certer_bottom_title"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_28px" />

        <View style="@style/split_line"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_178px"
            android:background="@color/white">

            <View
                android:id="@+id/view_divider"
                android:layout_width="@dimen/dd_dimen_1px"
                android:layout_height="@dimen/dd_dimen_110px"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/divider"
                android:visibility="gone"></View>

            <RelativeLayout
                android:id="@+id/rl_online"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dd_dimen_150px"
                android:layout_toLeftOf="@+id/view_divider"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_img_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_jx_custom_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_img_online"
                    android:layout_marginTop="@dimen/dd_dimen_24px"
                    android:text="@string/labe_service_certer_bottom_online"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_28px" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dd_dimen_150px"
                android:layout_toRightOf="@+id/view_divider"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_img_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_jx_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_img_phone"
                    android:layout_marginTop="@dimen/dd_dimen_24px"
                    android:text="@string/labe_service_certer_bottom_phone"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_28px" />

            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>