    <View style="@style/split_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_180px"
        android:paddingTop="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_order_total_price_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:minEms="2"
            android:text="￥3600"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_24px" />

        <TextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_toLeftOf="@id/tv_order_total_price_content"
            android:text="@string/order_list_total_price"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

        <TextView
            android:id="@+id/tv_order_count_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dimen_60px"
            android:layout_toLeftOf="@id/tv_order_total_price"
            android:minEms="2"
            android:text="2"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

        <TextView
            android:id="@+id/tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_toLeftOf="@id/tv_order_count_content"
            android:text="@string/order_list_count"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

        <TextView
            android:id="@+id/btn_right"
            android:gravity="center"
            android:background="@mipmap/btn_bg_seclect"
            android:layout_below="@id/tv_order_total_price_content"
            android:layout_width="@dimen/dd_dimen_140px"
            android:layout_height="@dimen/dd_dimen_54px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:text="立即付款"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="@dimen/dd_dimen_140px"
            android:layout_height="@dimen/dd_dimen_54px"
            android:layout_below="@id/tv_order_count"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_toLeftOf="@id/btn_right"
            android:background="@mipmap/btn_bg_unselect"
            android:gravity="center"
            android:text="取消订单"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />
    </RelativeLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/color_norm_f4f4f4" />
</LinearLayout>


