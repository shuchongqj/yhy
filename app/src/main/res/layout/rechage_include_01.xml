<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_40px"
        android:text="充值后可使用余额进行支付"
        android:textColor="@color/neu_999999"
        android:textSize="@dimen/dd_dimen_30px"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginTop="@dimen/dd_dimen_40px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:src="@mipmap/pay_money_image"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="金额(元)"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_36px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:visibility="gone"
            android:text="￥"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_34px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_card_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:background="@null"
            android:numeric="decimal"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/dd_dimen_34px"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_config"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_100px"
        android:background="@drawable/btn_orange_selector"
        android:text="下一步"
        android:textSize="@dimen/dd_dimen_34px" />

</LinearLayout>