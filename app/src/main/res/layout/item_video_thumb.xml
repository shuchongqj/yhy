<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_img_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/ac_title_bg_color"
    android:orientation="vertical"
    android:padding="@dimen/dd_dimen_5px">

    <ImageView
        android:id="@+id/ivpush"
        android:layout_width="@dimen/dd_dimen_162px"
        android:layout_height="@dimen/dd_dimen_162px"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_150_150"></ImageView>

    <ImageView
        android:id="@+id/select_img_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_edit_delete"></ImageView>

    <ImageView
        android:id="@+id/iv_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_edit_play"
        android:visibility="gone">

    </ImageView>

    <TextView
        android:id="@+id/tv_click_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dd_dimen_10px"
        android:gravity="center"
        android:text="@string/label_btn_click_play"
        android:textColor="@color/white"
        android:textSize="@dimen/dd_dimen_28px"
        android:visibility="gone" />
</RelativeLayout>