<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/click_selector"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dd_dimen_30px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px"
    android:paddingTop="@dimen/dd_dimen_20px">

    <ImageView
        android:id="@+id/cell_home_gold_guide_header_img"
        android:layout_width="@dimen/dd_dimen_120px"
        android:layout_height="@dimen/dd_dimen_120px"
        android:background="@mipmap/icon_default_128_128"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/cell_home_gold_guide_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_15px"
        android:singleLine="true"
        android:textColor="@color/neu_333333"
        android:textSize="@dimen/text_size_30px" />

    <TextView
        android:id="@+id/cell_home_gold_guide_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_15px"
        android:singleLine="true"
        android:textColor="@color/neu_666666"
        android:textSize="@dimen/text_size_22px" />
</LinearLayout>