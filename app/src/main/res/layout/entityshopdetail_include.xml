<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_norm_f4f4f4"
    android:orientation="vertical">
<!--    <View
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:background="@color/bg_grey" -->/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bg"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bigshot_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:text="运动咖推荐"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px" />


        <ImageView
            android:id="@+id/iv_bigshot_head_icon"
            android:layout_width="@dimen/dd_dimen_111px"
            android:layout_height="@dimen/dd_dimen_111px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_default_avatar" />

        <TextView
            android:id="@+id/scenicdetials_lvyouka_name_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textStyle="bold"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/tv_masterRecommend"
            android:lineSpacingExtra="@dimen/dd_dimen_10px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="15dip"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px" />
    </LinearLayout>
</LinearLayout>