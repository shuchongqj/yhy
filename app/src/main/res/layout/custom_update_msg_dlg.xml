<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_update_box_bg" />

        <ImageView
            android:id="@+id/msg_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:src="@mipmap/ic_update_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bottom_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_45dp"
        android:paddingRight="@dimen/margin_45dp"
        android:paddingTop="@dimen/margin_30dp">

        <TextView
            android:id="@+id/msg_dlg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px"></TextView>

        <TextView
            android:id="@+id/msg_dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dd_dimen_50px"
            android:layout_marginTop="@dimen/dd_dimen_50px"
            android:background="@drawable/shape_button_update"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>