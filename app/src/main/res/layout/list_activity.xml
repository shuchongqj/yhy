<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_click"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_180px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/dd_dimen_120px"
            android:layout_height="@dimen/dd_dimen_120px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:background="@drawable/bob_sc1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginTop="@dimen/dd_dimen_30px"
                android:singleLine="true"
                android:text="花开的声音"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dd_dimen_80px"
                android:layout_marginTop="@dimen/dd_dimen_30px"
                android:text="￥39"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_clubname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_order_message"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginTop="@dimen/dd_dimen_60px"
                android:text="亲子俱乐部"
                android:textColor="@color/color_norm_bebebe"
                android:textSize="@dimen/dd_dimen_24px" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tv_price"
                android:layout_marginRight="@dimen/dd_dimen_80px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:text="x 2"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_30px" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_40px"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:background="@mipmap/arrow_go" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>