<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/view_master_line_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/label_line_master_title"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px"/>

        <LinearLayout
            android:id="@+id/ll_master_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_master_line_people_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231"
                android:textColor="@color/neu_ff9900"
                android:textSize="@dimen/text_size_24px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人感兴趣"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_24px"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:src="@mipmap/icon_master_tab_right_img"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_master_line_item_parent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dd_dimen_10px"
        android:paddingRight="@dimen/dd_dimen_10px">

    </LinearLayout>
</LinearLayout>