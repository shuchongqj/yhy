<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_buymust_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_360px"
            android:background="@mipmap/icon_default_750_360"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_buymust_img"
            android:layout_marginBottom="@dimen/dd_dimen_16px">

            <TextView
                android:id="@+id/tv_buymust_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:singleLine="true"
                android:text="11111"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_24px" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_buymust_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_28px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/money_symbol"
                    android:textColor="@color/neu_fa4619"
                    android:textSize="@dimen/text_size_20px" />

                <TextView
                    android:id="@+id/item_buymust_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_14px"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/neu_fa4619"
                    android:textSize="@dimen/text_size_36px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_8px"
                    android:singleLine="true"
                    android:text="@string/money_start"
                    android:visibility="gone"
                    android:textColor="@color/neu_fa4619"
                    android:textSize="@dimen/text_size_20px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shopll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_10px">

            <ImageView
                android:id="@+id/iv_buymust_shop_head"
                android:layout_width="@dimen/dd_dimen_48px"
                android:layout_height="@dimen/dd_dimen_48px"
                android:src="@mipmap/icon_default_128_128" />

            <TextView
                android:id="@+id/tv_buymust_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_16px"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/text_size_26px" />
        </LinearLayout>
    </LinearLayout>
    <View style="@style/split_line"
        android:layout_height="@dimen/dd_dimen_20px"></View>
</LinearLayout>