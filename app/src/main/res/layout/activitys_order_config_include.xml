<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/orderbackground_f4f4f4"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@color/color_norm_dddddd" />

    <LinearLayout
        android:id="@+id/ll_orderconfig_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dd_dimen_15px"
        android:orientation="vertical" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_marginTop="@dimen/dd_dimen_25px"
        android:background="@color/color_norm_dddddd" />
</LinearLayout>