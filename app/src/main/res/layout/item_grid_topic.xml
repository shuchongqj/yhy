<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:gravity="center_horizontal"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/item_grid_topic_img"
        android:layout_width="@dimen/dd_dimen_104px"
        android:layout_height="@dimen/dd_dimen_104px"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/item_grid_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="@dimen/dd_dimen_10px"
        android:textColor="@color/neu_333333"
        android:textSize="@dimen/text_size_24px"/>
</LinearLayout>