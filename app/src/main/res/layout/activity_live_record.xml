<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.videolibrary.puhser.activity.LiveRecordActivity">

    <com.quanyan.base.view.customview.pulltorefresh.PullToRefreshGridView
        android:id="@+id/ac_live_record_pullrefresh_gridview"
        xmlns:pullrefresh="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="8dp"
        android:listSelector="#00000000"
        android:scrollbars="none"
        android:smoothScrollbar="true"
        android:verticalSpacing="8dp"
        pullrefresh:ptrAnimationStyle="rotate"
        pullrefresh:ptrMode="both">

    </com.quanyan.base.view.customview.pulltorefresh.PullToRefreshGridView>

    <LinearLayout
        android:id="@+id/ac_live_record_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/btn_delete_replay_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:text="删除"/>
    </LinearLayout>
</LinearLayout>
