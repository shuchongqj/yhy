<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="价     格"
            android:textSize="@dimen/dd_dimen_30px"
            android:layout_gravity="center_vertical"
            android:textColor="@color/neu_333333"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dd_dimen_30px">
            <TextView
                android:id="@+id/tv_desc_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:text="/人"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px"/>

            <TextView
                android:id="@+id/tv_price_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_desc_price"
                android:text="50"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dd_dimen_30px"
                android:textColor="@color/neu_333333"
                android:layout_marginRight="@dimen/dd_dimen_10px"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>