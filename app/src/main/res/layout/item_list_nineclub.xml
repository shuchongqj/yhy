<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dd_dimen_9px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_420px"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_default_750_360"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:text="夏季必体验美景"
            android:textSize="@dimen/dd_dimen_32px" />

        <!--<View-->
            <!--style="@style/split_line"-->
            <!--android:layout_height="@dimen/dd_dimen_20px"-->
            <!--android:layout_alignParentBottom="true"></View>-->

    </RelativeLayout>
</LinearLayout>