<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    >

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:id="@+id/iv_item"
                android:layout_width="@dimen/dd_dimen_214px"
                android:layout_height="@dimen/dd_dimen_214px"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_item"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:maxLines="1"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_36px" />


            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_item"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:maxLines="1"
                android:textColor="@color/color_norm_bebebe"
                android:textSize="@dimen/dd_dimen_24px" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:layout_height="@dimen/dd_dimen_1px"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:background="@color/line_gray" />
    </LinearLayout>
</RelativeLayout>