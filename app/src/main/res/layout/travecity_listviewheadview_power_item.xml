<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/cell_plane_hotel_set_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_130px"
        android:layout_marginRight="@dimen/dd_dimen_130px"
        android:layout_marginTop="@dimen/dd_dimen_20px"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/cell_plane_hotel_set_bottom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/color_norm_333333"
            android:textSize="@dimen/dd_dimen_30px" />

        <ImageView
            android:id="@+id/cell_plane_hotel_set_bottom_img"
            android:layout_width="@dimen/dd_dimen_40px"
            android:layout_height="@dimen/dd_dimen_40px"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
     />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_below="@id/cell_plane_hotel_set_bottom_layout"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/color_norm_eeeeee"
     />
</RelativeLayout>