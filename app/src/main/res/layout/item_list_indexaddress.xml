<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dd_dimen_30px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_79px">

        <TextView
            android:id="@+id/tv_before"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_40px"
            android:layout_marginBottom="@dimen/dd_dimen_10px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_26px" />

        <TextView
            android:id="@+id/tv_location_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/dd_dimen_20px"
            android:text="@string/label_location_failed"/>

        <TextView
            android:id="@+id/tv_current_location"
            android:layout_width="@dimen/dd_dimen_146px"
            android:layout_height="@dimen/dd_dimen_54px"
            android:textSize="@dimen/dd_dimen_24px"
            android:textColor="@color/neu_333333"
            android:singleLine="true"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:background="@drawable/city_item_history_bg_selector"
            android:gravity="center"/>

    </LinearLayout>

</FrameLayout>

