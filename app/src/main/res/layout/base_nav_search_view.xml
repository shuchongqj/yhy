<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/base_nav_search_left_img_layout"
        android:layout_width="@dimen/margin_48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/base_nav_search_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/arrow_back_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_nav_search_left_loc_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/base_nav_search_left_loc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/location"/>

        <TextView
            android:id="@+id/base_nav_search_left_loc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_30px"
            android:text="@string/label_city_kunming"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_20px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/base_nav_search_label_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/master_top_bar_search"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_10px">

            <ImageView
                android:id="@+id/base_nav_search_left_label_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/search_grey"/>

            <TextView
                android:id="@+id/base_nav_search_left_label_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:singleLine="true"
                android:text="目的地/ 景区 / 门票"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_30px"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_nav_search_right_img_layout"
        android:layout_width="@dimen/margin_48dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/base_nav_search_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/location_marker"/>
    </LinearLayout>
</LinearLayout>