<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/orderline_e1e1e1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_spcart_state"
                    android:layout_width="@dimen/dd_dimen_70px"
                    android:layout_height="@dimen/dd_dimen_70px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_10px"
                    android:padding="@dimen/dd_dimen_15px"
                    android:src="@mipmap/spcart_unchecked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_5px"
                    android:text="全选"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="合计:"
                        android:textColor="@color/neu_666666"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <TextView
                        android:id="@+id/tv_spcart_all_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_5px"
                        android:text="￥0"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_35px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="积分可抵合计:"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_spcart_all_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_10px"
                        android:text="￥0"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/dd_dimen_28px" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

         <!--neu_ffaa00-->

        <TextView
            android:id="@+id/tv_go_deal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="@color/red_ying"
            android:gravity="center"
            android:text="去结算(0)"
            android:textColor="@color/white"
            android:textSize="@dimen/dd_dimen_30px" />
    </LinearLayout>


</LinearLayout>