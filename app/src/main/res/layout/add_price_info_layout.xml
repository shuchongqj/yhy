<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dd_dimen_15px"
    android:paddingBottom="@dimen/dd_dimen_15px"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:id="@+id/tv_sku_name"
        android:textColor="@color/tv_color_gray6"
        android:textSize="@dimen/dd_dimen_30px"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="单价"
            android:textColor="@color/tv_color_gray6"
            android:textSize="@dimen/dd_dimen_30px"/>

        <TextView
            android:id="@+id/club_apply_price_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_21px"
            android:singleLine="true"
            android:text="¥100.0"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_30px"/>
    </LinearLayout>

    <com.quanyan.yhy.view.NumberChoose
        android:id="@+id/club_apply_num_choose_adult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px">
    </com.quanyan.yhy.view.NumberChoose>
</LinearLayout>