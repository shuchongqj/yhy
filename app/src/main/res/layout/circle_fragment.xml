<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_circle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        app:tabIndicatorColor="@color/red_ying"
        app:tabSelectedTextColor="@color/red_ying"
        app:tabTextColor="@color/text_color_find_item_title"
        app:tabIndicatorHeight="2dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:background="@color/background_dark"
        app:layout_constraintTop_toBottomOf="@+id/tab_circle"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>