<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_120px"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_120px"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ll_mine_contain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_mine_icon"
                    android:layout_width="@dimen/dd_dimen_30px"
                    android:layout_height="@dimen/dd_dimen_30px"
                   />

                <TextView
                    android:id="@+id/tv_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_24px"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:textColor="@color/neu_333333"
                    android:text="优惠券"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:maxLines="1"
                android:text="2"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ll_mine_contain"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"
                android:textStyle="bold"
                />
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>