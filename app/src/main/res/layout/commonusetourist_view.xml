<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_check"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_check"
                    android:layout_width="@dimen/dd_dimen_45px"
                    android:layout_height="@dimen/dd_dimen_45px"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_uncheck" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_15px"
                android:layout_marginRight="@dimen/dd_dimen_10px"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dd_dimen_15px"
                android:paddingTop="@dimen/dd_dimen_15px">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dd_dimen_8px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="王建"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_30px" />

                <LinearLayout
                    android:id="@+id/ll_idcard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_idcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="130928198709291315"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_passcard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="护        照："
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_passcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="130928198709291315"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_mtcard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="军  人  证："
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_mtcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="130928198709291315"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_hkcard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="港澳通行证："
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_hkcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="130928198709291315"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电        话："
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/order_666666"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tips"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信息不完整，请补全"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_edit"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/club_join_color_stroke_bg"
                    android:paddingBottom="@dimen/dd_dimen_6px"
                    android:paddingLeft="@dimen/dd_dimen_20px"
                    android:paddingRight="@dimen/dd_dimen_20px"
                    android:paddingTop="@dimen/dd_dimen_6px"
                    android:text="编辑"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_24px" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:background="@color/divider" />

    </LinearLayout>
    <!--id必须设置为定义好的“scroll_delete_menu_layout”，layout_width必须确定，否则无法滑动-->
    <LinearLayout
        android:id="@id/scroll_delete_menu_layout"
        android:layout_width="@dimen/dd_dimen_200px"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/cell_visitor_list_delete"
            android:layout_width="@dimen/dd_dimen_200px"
            android:layout_height="fill_parent"
            android:background="#f00">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/del_photo"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dd_dimen_30px" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>