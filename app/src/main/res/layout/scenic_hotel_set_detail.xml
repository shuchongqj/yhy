<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_f4">

    <include
        android:id="@+id/s_hotel_set_detail_bottom_layout"
        layout="@layout/wonderfull_play_detail_buy_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_alignParentBottom="true"/>

    <ListView
        android:id="@+id/scenic_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:divider="@color/tc_e1e1e1"
        android:footerDividersEnabled="false"
        android:dividerHeight="0.5dp"
        android:listSelector="#00000000"
        android:layout_above="@id/s_hotel_set_detail_bottom_layout"
        android:cacheColorHint="#00000000">
    </ListView>

    <include layout="@layout/wonderfull_detail_right_date"/>
    <include layout="@layout/transparent_topbar"/>
</RelativeLayout>