<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/neu_f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="14dp">

        <TextView
            android:id="@+id/tv_place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/neu_696969"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="五角场镇市民健身中心" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="12月20日 周三 20:00" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@drawable/bg_dot_line"
        android:layout_marginLeft="@dimen/yhy_size_21px"
        android:layout_marginRight="@dimen/yhy_size_21px"
        android:layerType="software" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--AA应战邀请-->
        <LinearLayout
            android:id="@+id/llyt_aa_fight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="18dp">

            <!--左侧邀请方信息-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_aa_left"
                    android:layout_width="54dp"
                    android:layout_height="54dp" />

                <TextView
                    android:id="@+id/tv_aa_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:lines="2"
                    android:textColor="@color/neu_4a4a4a"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    tools:text="鹰和鹰叼炸天叼炸天队" />
            </LinearLayout>

            <!--中间vs信息-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_aa_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_vs" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_aa_play_type"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/icon_fb" />

                    <TextView
                        android:id="@+id/tv_aa_play_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/neu_4a4a4a"
                        android:textSize="14sp"
                        tools:text="足球" />

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/icon_club_active_member" />

                    <TextView
                        android:id="@+id/tv_aa_play_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/neu_4a4a4a"
                        android:textSize="14sp"
                        tools:text="11人制" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyt_aa_inviting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tv_aa_join_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/neu_4a4a4a"
                        android:textSize="13sp"
                        tools:text="2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/neu_4a4a4a"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_aa_total_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/neu_999999"
                        android:textSize="13sp"
                        tools:text="5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人已参战"
                        android:textColor="@color/neu_999999"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_aa_invite_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="AA约战成功"
                    android:textColor="@color/neu_43bf43"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>

            <!--右边应战信息-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--约战中-->
                <LinearLayout
                    android:id="@+id/llyt_aa_right_inviting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="54dp"
                        android:layout_height="54dp"
                        android:src="@mipmap/icon_group" />

                    <ImageView
                        android:id="@+id/iv_aa_right_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:src="@mipmap/ic_btn_blue" />
                </LinearLayout>

                <!--约战成功-->
                <LinearLayout
                    android:id="@+id/llyt_aa_right_invite_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!--<ImageView-->
                    <!--android:layout_width="54dp"-->
                    <!--android:layout_height="54dp"-->
                    <!--android:src="@mipmap/icon_group" />-->
                    <com.newyhy.views.OverlayListLayout
                        android:id="@+id/overlay_aa_accepts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:image_max_count="3">

                    </com.newyhy.views.OverlayListLayout>

                    <TextView
                        android:id="@+id/tv_aa_accept_names"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="2"
                        android:text="爱梦游的爱丽丝/乔布斯／Boon…"
                        android:textColor="@color/neu_4a4a4a"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llyt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="22dp"
        android:layout_marginTop="8dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@drawable/bg_dot_line"
            android:layout_marginLeft="@dimen/yhy_size_5px"
            android:layerType="software" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/icon_address_gray"
                android:drawablePadding="6dp"
                android:textColor="@color/neu_999999"
                android:textSize="13sp"
                tools:text="上海市杨浦区民京路781号" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_share"
                android:drawablePadding="6dp"
                android:textColor="@color/neu_999999"
                android:textSize="13sp"
                android:text="分享" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>