<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/navi_search_location_back_layout"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navi_search_location_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/arrow_back_gray" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_topview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/navi_search_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="@dimen/dd_dimen_160px"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_36px" />

            <ImageView
                android:id="@+id/line_top_search_view_location_img"
                android:layout_width="@dimen/dd_dimen_20px"
                android:layout_height="@dimen/dd_dimen_15px"
                android:layout_marginLeft="@dimen/dd_dimen_7px"
                android:src="@mipmap/scenic_home_down_image" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>