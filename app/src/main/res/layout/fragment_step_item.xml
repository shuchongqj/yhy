<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.quanyan.pedometer.view.ColorArcProgressBar
        android:id="@+id/fg_arc_progress_bar"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:layout_gravity="center_horizontal"
        app:back_color="@color/neu_f4f4f4"
        app:back_width="20dp"
        app:front_width="20dp"
        app:front_color1="@color/ac_title_bg_color"
        app:front_color2="@color/neu_fa4619"
        app:is_need_content="true"
        app:is_need_title="true"
        app:is_need_unit="false"
        app:max_value="20000"
        app:string_title="已走步数"
        app:start_sweep_angle="270"
        app:string_unit="步"
        app:total_angle="360"/>

</LinearLayout>