<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dd_dimen_20px"
                android:background="@color/color_norm_ffffff">

    <ImageView
        android:id="@+id/eventitem_iv_user"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_360px"
        android:layout_marginBottom="@dimen/dd_dimen_5px"
        android:background="@mipmap/icon_default_215_150"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/eventitem_iv_user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:background="@color/translucent_77"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dd_dimen_15px"
        android:paddingLeft="@dimen/dd_dimen_32px"
        android:paddingRight="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_15px">

        <TextView
            android:id="@+id/home_traveldetails_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥ "
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:text="起/人"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_24px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/ht_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventitem_iv_user"
        android:layout_marginBottom="@dimen/dd_dimen_10px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:textColor="@color/color_norm_333333"
        android:textSize="@dimen/text_size_32px"/>

    <TextView
        android:id="@+id/eventitem_tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ht_message"
        android:layout_marginBottom="@dimen/dd_dimen_50px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:textColor="@color/neu_999999"
        android:textSize="@dimen/text_size_24px"/>

    <TextView
        android:id="@+id/home_travelsdetail_item_sale_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ht_message"
        android:layout_alignTop="@id/eventitem_tv_message"
        android:text="已售"
android:visibility="gone"
        android:textColor="@color/color_norm_bebebe"
        android:textSize="@dimen/text_size_24px"/>
</RelativeLayout>