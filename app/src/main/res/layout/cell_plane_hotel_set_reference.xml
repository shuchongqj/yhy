<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:paddingLeft="@dimen/dd_dimen_40px"
              android:paddingTop="@dimen/dd_dimen_20px"
              android:paddingRight="@dimen/dd_dimen_40px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px"/>

        <TextView
            android:id="@+id/wonderful_play_detail_plan_address_departure1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/tv_color_gray6"
            android:textSize="@dimen/text_size_28px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center">

            <View
                android:layout_width="@dimen/dd_dimen_42px"
                android:layout_height="@dimen/dd_dimen_42px"/>
        </LinearLayout>

        <TextView
            android:id="@+id/wonderful_play_detail_plan_address_arrive1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/tv_color_gray6"
            android:textSize="@dimen/text_size_28px"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wonderful_play_detail_flight_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="去程："
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px"/>

        <TextView
            android:id="@+id/wonderful_play_detail_plan_time_departure1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:gravity="center">

            <ImageView
                android:id="@+id/wonderful_play_detail_plan_traffic_type1"
                android:layout_width="@dimen/dd_dimen_42px"
                android:layout_height="@dimen/dd_dimen_42px"
                android:src="@mipmap/ic_flight_refer"/>
        </LinearLayout>

        <TextView
            android:id="@+id/wonderful_play_detail_plan_time_arrive1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px"/>
    </LinearLayout>
    <TextView
        android:id="@+id/wonderful_play_detail_plan_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_20px"
        android:visibility="gone"
        android:textColor="@color/neu_666666"
        android:text=""
        android:textSize="@dimen/dd_dimen_27px"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:gravity="center"/>
</LinearLayout>