<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_norm_ffffff"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/color_norm_f4f4f4"
        android:orientation="vertical">
    </View>

    <RelativeLayout
        android:id="@+id/rl_handcere_list_more"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_columnbar" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/view4"
            android:layout_toRightOf="@+id/view4"
            android:gravity="center"
            android:minHeight="@dimen/dd_dimen_80px"
            android:paddingRight="@dimen/dd_dimen_20px"
            android:text="经典伴手礼"
            android:textColor="@color/color_norm_636363"
            android:textSize="@dimen/dd_dimen_30px" />

        <TextView
            android:id="@+id/home_listview_hv_tv_title6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:text="美味传承"
            android:gravity="center"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

        <TextView
            android:id="@+id/home_listview_hv_tv_title5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/view4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="更多"
            android:gravity="center"
            android:drawablePadding="@dimen/dd_dimen_15px"
            android:drawableRight="@mipmap/arrow_go"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_24px" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/color_norm_eeeeee" />

    <com.quanyan.base.view.customview.NoScrollGridView
        android:id="@+id/discovery_handceremony_gridview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_handcere_list_more"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_20px"
        android:horizontalSpacing="10.0dip"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10.0dip" />
</LinearLayout>
