<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/dd_dimen_30px"
    android:paddingBottom="@dimen/dd_dimen_30px"
    android:paddingLeft="@dimen/dd_dimen_50px"
    android:paddingRight="@dimen/dd_dimen_50px"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_image"
        android:background="@mipmap/ic_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@+id/iv_image"
        android:id="@+id/toastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_20px"
        android:text=""
        android:textColor="@color/color_norm_636363" />

</RelativeLayout>