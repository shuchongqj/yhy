<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_six"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_600px"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="领取优惠券"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px" />

            <RelativeLayout
                android:id="@+id/rl_coupon_close"
                android:layout_width="@dimen/dd_dimen_100px"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="@dimen/dd_dimen_30px"
                    android:layout_height="@dimen/dd_dimen_30px"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/spcart_coupon_dialog_cancle_image" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/orderline_e1e1e1" />

        <ListView
            android:id="@+id/coupon_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/gray_E5"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:footerDividersEnabled="false"
            android:listSelector="#00000000"
            android:scrollbars="none" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_layout"
        android:orientation="horizontal" />

</RelativeLayout>