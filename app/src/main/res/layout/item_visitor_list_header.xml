<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_norm_f4f4f4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:orientation="vertical"
        android:background="@drawable/find_item_bg_selector"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dd_dimen_1px">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/dd_dimen_45px"
                android:layout_height="@dimen/dd_dimen_45px"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_20px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_visitor_add" />

            <TextView
                style="@style/fontType_30"
                android:id="@+id/tv_visitor_add_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/dd_dimen_30px"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:src="@mipmap/arrow_go" />
    </RelativeLayout>
</LinearLayout>