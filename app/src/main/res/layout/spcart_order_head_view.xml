<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <include layout="@layout/point_order_address_include" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_10px"
        android:background="@mipmap/spcart_order_line" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_6px"
        android:background="@color/orderline_e1e1e1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_140px">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/spcart_order_point" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_integral_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/neu_333333"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <TextView
                        android:id="@+id/tv_integral_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_15px"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="当前积分："
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/dd_dimen_30px" />

                    <TextView
                        android:id="@+id/mime_use_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/neu_999999"
                        android:textSize="@dimen/dd_dimen_30px" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_switch"
            style="@style/SwitchCheckboxTheme"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="15dip"
            android:checked="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_1px"
        android:background="@color/orderline_e1e1e1" />

</LinearLayout>