<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_10px"
        android:background="@color/orderline_e1e1e1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_group_check"
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:padding="@dimen/dd_dimen_15px"
                android:src="@mipmap/ic_checked" />

            <ImageView
                android:id="@+id/cell_group_head"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_shop_default_logo"/>

            <TextView
                android:id="@+id/tv_group_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_15px"
                android:text="快乐专营店"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/dd_dimen_30px" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:src="@mipmap/arrow_go"
                android:visibility="invisible"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="@dimen/dd_dimen_150px"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_30px" />
    </RelativeLayout>


</LinearLayout>