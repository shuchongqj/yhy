<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_phone_bk"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dimen_40px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="@dimen/dd_dimen_32px"
            android:text="+86"/>

        <TextView
            android:id="@+id/tv_xian"
            android:layout_width="@dimen/dd_dimen_2px"
            android:layout_height="@dimen/dd_dimen_28px"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:background="#4a4a4a"/>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/dd_dimen_24px"
            android:gravity="center_vertical"
            android:hint="@string/hint_your_phone"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:textColorHint="#4a4a4a"
            android:textSize="@dimen/dd_dimen_32px" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:scaleType="center"
            android:src="@mipmap/ic_login_delete" />

        <ImageView
            android:id="@+id/iv_change_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:scaleType="center"
            android:src="@mipmap/ic_normal_password_eye" />
    </LinearLayout>



</LinearLayout>

