<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rl_content"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp">

        <ImageView
            android:layout_marginTop="@dimen/yhy_size_5px"
            android:layout_marginBottom="@dimen/yhy_size_5px"
            android:scaleType="centerCrop"
            android:id="@+id/video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_anchor_name"
            android:layout_marginLeft="@dimen/yhy_size_11px"
            android:layout_marginBottom="@dimen/yhy_size_10px"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:textSize="@dimen/yhy_size_12px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_video_view_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/yhy_size_11px"
            android:layout_marginBottom="@dimen/yhy_size_10px"
            android:drawableLeft="@drawable/icon_read"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/yhy_size_12px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_name"
        app:layout_constraintTop_toBottomOf="@+id/rl_content"
        android:layout_marginTop="@dimen/yhy_size_6px"
        android:ellipsize="end"
        android:maxLength="12"
        android:layout_marginLeft="@dimen/yhy_size_100px"
        android:textColor="@color/live_text_color"
        android:textSize="@dimen/yhy_size_13px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>