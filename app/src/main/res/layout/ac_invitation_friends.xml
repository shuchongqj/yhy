<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.quanyan.base.view.customview.tabscrollindicator.SlidingTabLayout
        android:id="@+id/ac_invitation_sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.quanyan.base.view.customview.tabscrollindicator.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ac_invitation_friends_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/ac_invite_friend_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请一个好友+500积分>"
            android:textColor="@color/neu_fa4619"
            android:textSize="@dimen/text_size_30px"/>
    </LinearLayout>
</LinearLayout>