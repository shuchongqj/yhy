<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <LinearLayout
            android:id="@+id/fg_share_pro_wechat_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pedo_share_wechat"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="微信"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_share_pro_wechat_circles_layut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pedo_share_wechat_firends"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="朋友圈"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_share_pro_qq_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pedo_share_qq"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="QQ"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_share_pro_weibo_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pedo_share_weibo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="微博"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_share_pro_cicles_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dd_dimen_70px"
                android:layout_height="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_pedo_share_master_circles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="圈子"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>