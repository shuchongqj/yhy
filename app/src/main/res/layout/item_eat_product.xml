<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_172px"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_handcere_grid_bg"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dd_dimen_30px">

            <ImageView
                android:id="@+id/iv_eat_product_bg"
                android:layout_width="@dimen/dd_dimen_132px"
                android:layout_height="@dimen/dd_dimen_132px"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dd_dimen_20px"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default_150_150" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dd_dimen_34px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_eat_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_30px"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/text_size_30px" />


                <LinearLayout
                    android:id="@+id/ll_address_de"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_eat_product_name"
                    android:layout_marginBottom="@dimen/dd_dimen_10px"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/location_eat"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tv_eat_product_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dd_dimen_12px"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/neu_666666"
                        android:textSize="@dimen/text_size_24px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_eat_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address_de"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:singleLine="true"
                    android:text="11"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_24px" />
            </RelativeLayout>
        </LinearLayout>

        <View
            style="@style/split_line"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>


</LinearLayout>