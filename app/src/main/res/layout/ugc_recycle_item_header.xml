<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="70dp">
    
    <ImageView
        android:id="@+id/iv_header_ugc"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_default_avatar"/>
    
    <TextView
        android:id="@+id/tv_name_ugc"
        android:layout_toRightOf="@id/iv_header_ugc"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:maxLength="12"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time_ugc"
        android:layout_toRightOf="@id/iv_header_ugc"
        android:layout_below="@id/tv_name_ugc"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12dp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/btn_follow_ugc"
        android:layout_width="50dp"
        android:layout_height="22dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:text="+关注"
        android:textColor="@color/red_ying"
        android:background="@drawable/shape_more_item_ability_bg"/>

    <LinearLayout
        android:id="@+id/ll_saw_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_saw_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="13dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/red_ying"/>

        <TextView
            android:id="@+id/tv_type_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saw"
            android:textSize="11dp"
            android:textColor="@color/gray"/>

    </LinearLayout>

</RelativeLayout>