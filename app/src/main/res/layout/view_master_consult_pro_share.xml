<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/about_us_logo_pedometr_share"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_share_consult_label"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dd_dimen_60px"
            android:paddingTop="@dimen/dd_dimen_60px">

            <ImageView
                android:id="@+id/view_share_master_consult_userhead"
                android:layout_width="@dimen/dd_dimen_180px"
                android:layout_height="@dimen/dd_dimen_180px"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/view_share_master_consult_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_ying"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/view_share_master_consult_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/neu_333333"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/view_share_master_consult_serve_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:textColor="@color/neu_999999"
                android:textSize="13sp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/view_share_master_consult_free_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="限免"
                    android:textColor="@color/red_ying"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/view_share_master_consult_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/neu_333333"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/view_share_master_consult_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/neu_333333"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red_ying"
            android:paddingBottom="20dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/view_point_share_qr_code"
                    android:layout_width="130dp"
                    android:layout_height="130dp"/>

                <ImageView
                    android:id="@+id/view_point_share_qr_codeidentify"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/view_point_share_qr_code"
                    android:src="@mipmap/ic_share_qrcode_identify"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>