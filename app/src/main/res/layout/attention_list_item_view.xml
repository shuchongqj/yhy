<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dd_dimen_30px">

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/dd_dimen_120px"
            android:layout_height="@dimen/dd_dimen_120px"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_5px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_30px" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_20px"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/neu_666666"
                android:textSize="@dimen/dd_dimen_24px" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_submit"
            android:layout_width="@dimen/dd_dimen_80px"
            android:layout_height="@dimen/dd_dimen_80px"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_attentioned" />

    </LinearLayout>

    <View
        style="@style/split_line"
        android:layout_alignParentBottom="true"></View>

</LinearLayout>