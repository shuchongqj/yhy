<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_video_cache_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_video_cache_while"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:paddingTop="@dimen/dd_dimen_20px"
            android:text="@string/label_dlg_btn_exit_after_video_cache"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/neu_f4f4f4"/>


        <TextView
            android:id="@+id/dialog_video_cache_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:paddingTop="@dimen/dd_dimen_20px"
            android:text="@string/label_dlg_btn_exit"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_10px"
            android:background="@color/neu_f4f4f4"/>

        <TextView
            android:id="@+id/dialog_video_cache_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/dd_dimen_20px"
            android:paddingTop="10dp"
            android:text="@string/cancel"
            android:textColor="@color/red_ying"
            android:textSize="@dimen/text_size_30px"/>

    </LinearLayout>

</RelativeLayout>