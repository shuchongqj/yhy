<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dd_dimen_8px"
            android:layout_height="@dimen/dd_dimen_30px"
            android:src="@drawable/scenicorder_title_image" />

        <TextView
            android:id="@+id/tv_topview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_30px" />
    </LinearLayout>

</LinearLayout>