<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/color_norm_ffffff"
    android:orientation="vertical">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_hall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_350px">


        <ImageView
            android:id="@+id/discover_club_fragment_search"
            android:layout_width="match_parent"
            android:background="@color/color_norm_dddddd"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/cf_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_30px"

            android:scaleType="fitXY"
            android:src="@mipmap/arrow_back_white" />


        <ImageView
            android:id="@+id/cf_iv_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_30px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_bar_love"
            android:visibility="gone" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/cf_iv_logo"
                android:layout_width="@dimen/dd_dimen_96px"
                android:layout_height="@dimen/dd_dimen_96px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dd_dimen_70px"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_default_128_128" />

            <TextView
                android:id="@+id/cf_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_below="@id/cf_iv_logo"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/color_norm_ffffff"
                android:textSize="@dimen/dd_dimen_40px" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/rl_sex_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dd_dimen_40px"
                    android:layout_alignBottom="@+id/cf_tv_name"
                    android:layout_toEndOf="@+id/cf_iv_logo"
                    android:layout_toRightOf="@+id/cf_iv_logo"
                    android:paddingRight="@dimen/margin_10dp"
                    android:paddingLeft="@dimen/margin_10dp"
                    android:background="@drawable/shape_sex_man_bg">

                    <ImageView
                        android:id="@+id/iv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/icon_sex_man_bg"
                        android:gravity="center_vertical"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />

                    <TextView
                        android:id="@+id/cf_tv_sex_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_5dp"
                        android:layout_toEndOf="@+id/iv_sex"
                        android:layout_toRightOf="@+id/iv_sex"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/color_norm_ffffff"
                        android:textSize="@dimen/dd_dimen_24px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/cf_tv_namea"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dd_dimen_40px"
                    android:layout_alignBottom="@+id/cf_tv_sex"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:layout_toEndOf="@+id/cf_tv_sex"
                    android:layout_toRightOf="@+id/cf_tv_sex"
                    android:background="@drawable/shape_homelistview_vip_bg"
                    android:gravity="center_vertical"
                    android:paddingBottom="2dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:paddingTop="2dp"
                    android:text="咖"
                    android:textColor="@color/color_norm_ffffff"
                    android:textSize="@dimen/dd_dimen_24px"
                    android:visibility="gone" />
            </LinearLayout>


            <TextView
                android:id="@+id/cf_tv_fans"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="20粉丝  |  300关注"
                android:textColor="@color/color_norm_ffffff"
                android:textSize="@dimen/dd_dimen_24px"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cf_tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cf_tv_fans"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_home_ollow_tv_bg"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="+关注"
                android:textColor="@color/color_norm_ffffff"
                android:textSize="@dimen/dd_dimen_24px"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_listview_ll_ability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/home_listview_rl_vip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_40px">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="能力"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_36px" />
        </RelativeLayout>

        <com.quanyan.yhy.view.HomeMenu_GridView
            android:id="@+id/gridview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_50px"
            android:layout_marginRight="@dimen/dd_dimen_50px"
            android:horizontalSpacing="10.0dip"
            android:listSelector="@android:color/transparent"
            android:numColumns="5"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="0.0dip" />
        <TextView
            android:id="@+id/tlhc_title_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:background="@drawable/shape_more_item_rl_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="5dp"
            android:text="更多能力"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/dd_dimen_30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_20px"
            android:layout_marginTop="@dimen/dd_dimen_40px"
            android:background="@color/color_norm_f4f4f4"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
