<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="@dimen/dd_dimen_30px">

    <ImageView
        android:id="@+id/iv_consult"
        android:layout_width="@dimen/dd_dimen_150px"
        android:layout_height="@dimen/dd_dimen_150px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/tt_mine_image_bg"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_marginRight="@dimen/dd_dimen_30px"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_consult_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="确信，藏在丽江的一个古镇中1111111111111111111111111111111111111111111111111111"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_30px" />

        <TextView
            android:id="@+id/tv_service_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="服务次数 100次"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/tv_service_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_5px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="服务城市 北京 滚名"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_24px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_consult"
        android:layout_width="@dimen/dd_dimen_140px"
        android:layout_height="@dimen/dd_dimen_54px"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dd_dimen_5px"
        android:background="@drawable/shape_more_item_ability_bg"
        android:gravity="center"
        android:text="@string/consult_now"
        android:textColor="@color/main"
        android:textSize="@dimen/dd_dimen_24px" />

</LinearLayout>