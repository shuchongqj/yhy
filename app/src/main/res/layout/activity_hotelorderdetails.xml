<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_hotelorderdetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_a"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dd_dimen_80px"
        android:layout_marginRight="@dimen/dd_dimen_80px"
        android:layout_marginTop="@dimen/dd_dimen_80px"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/sv_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="费用明细"
                android:textColor="@color/white"
                android:textSize="@dimen/dd_dimen_36px" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_80px"
                android:orientation="vertical" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_marginTop="@dimen/dd_dimen_60px"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/allcount_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单总价"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_allcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_36px" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/discount_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="优惠券"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_36px" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dd_dimen_30px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_actual_pay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_30px" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_paytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hotel_order_paytype"
                        android:paddingBottom="@dimen/dd_dimen_3px"
                        android:paddingLeft="@dimen/dd_dimen_10px"
                        android:paddingRight="@dimen/dd_dimen_10px"
                        android:paddingTop="@dimen/dd_dimen_3px"
                        android:text="在线付"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_28px" />

                    <TextView
                        android:id="@+id/tv_totalpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_36px" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>