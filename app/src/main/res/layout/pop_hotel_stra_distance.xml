<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:id="@+id/pop_layoutl"

    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_distance_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="距离范围"
            android:textColor="@color/color_norm_636363"
            android:textSize="@dimen/dd_dimen_26px"></TextView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dd_dimen_30px"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_hotel_tv_pic_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0km"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_26px"></TextView>


            <TextView
                android:id="@+id/pop_hotel_tv_pic_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="不限"
                android:textColor="@color/color_norm_636363"
                android:textSize="@dimen/dd_dimen_26px"></TextView>


        </RelativeLayout>


        <com.quanyan.yhy.view.CutProgressBar
            android:id="@+id/pop_hotel_customView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_30px" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pop_hotel_tv_distance_cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:layout_weight="1"
                android:background="@drawable/shape_button_hotel_cancel"
                android:gravity="center"
                android:padding="@dimen/margin_10dp"
                android:text="清空"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_34px"></TextView>


            <TextView
                android:id="@+id/pop_hotel_tv_distance_determine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:layout_weight="1"
                android:background="@drawable/button_main_background_selector"
                android:gravity="center"
                android:padding="@dimen/margin_10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="@dimen/dd_dimen_34px"></TextView>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_hotel_stra_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_below="@+id/pop_layout"
        android:layout_alignParentLeft="true">

    </LinearLayout>
</RelativeLayout>