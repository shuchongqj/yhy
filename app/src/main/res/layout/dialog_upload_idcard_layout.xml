<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_320px"
    android:id="@+id/rl"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/rl_takephoto"

        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_above="@+id/v2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="拍照"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_34px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@mipmap/icon_takephoto" />
    </RelativeLayout>
    <View
        android:id="@+id/v2"
        android:layout_above="@+id/rl_ablum"
        android:background="@color/tc_e1e1e1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_1px"/>
    <RelativeLayout
        android:id="@+id/rl_ablum"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_above="@+id/v1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="图库照片"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_34px" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:src="@mipmap/icon_ablum" />
    </RelativeLayout>

    <View
        android:id="@+id/v1"
        android:layout_above="@+id/tv_cancel_photo"
        android:background="@color/neu_e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"/>
    <TextView
        android:id="@+id/tv_cancel_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/neu_fb9b00"
        android:textSize="@dimen/dd_dimen_34px"
        android:textStyle="bold" />
</RelativeLayout>
