<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/dd_dimen_30px"
              android:paddingRight="@dimen/dd_dimen_30px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_commodity_type_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/clock_red"/>

        <View
            android:id="@+id/item_commodity_left_line"
            android:layout_width="@dimen/dd_dimen_1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/neu_cccccc"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dd_dimen_14px">

        <TextView
            android:id="@+id/item_commodity_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="第一天"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/item_commodity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:text="接机"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px"/>

        <RelativeLayout
            android:id="@+id/item_commodity_img_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_360px"
            android:layout_marginTop="@dimen/dd_dimen_30px">
            <ImageView
                android:id="@+id/item_commodity_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/item_commodity_img_totals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_black_50"
                android:text="@string/label_pic_total"
                android:textSize="@dimen/text_size_24px"
                android:textColor="@android:color/white"
                android:paddingTop="@dimen/dd_dimen_20px"
                android:paddingBottom="@dimen/dd_dimen_20px"
                android:paddingLeft="@dimen/dd_dimen_30px"
                android:paddingRight="@dimen/dd_dimen_30px"/>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/item_commodity_bottom_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dd_dimen_30px"
            android:paddingBottom="@dimen/dd_dimen_30px"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:background="@color/neu_f4f4f4"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>