<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.quanyan.yhy.ui.views.calendarpicker.CalendarPickerView
        android:id="@+id/pickerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone"
        android:orientation="vertical"
        android:padding="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="·"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_34px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/point"
            android:text="已选日期："
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:id="@+id/tv_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/select_date"
            android:textColor="@color/color_norm_bebebe"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:id="@+id/jia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/select_date"
            android:layout_below="@id/select_date"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:text="价"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:id="@+id/ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/select_date"
            android:layout_below="@id/select_date"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:text="格："
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_34px" />

        <TextView
            android:id="@+id/tv_select_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_select_date"
            android:layout_below="@id/tv_select_date"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:textColor="@color/main"
            android:textSize="@dimen/dd_dimen_34px" />
    </RelativeLayout>
</LinearLayout>