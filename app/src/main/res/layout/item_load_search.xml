<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px">

        <ImageView
            android:id="@+id/iv_search_icon"
            android:layout_width="@dimen/dd_dimen_45px"
            android:layout_height="@dimen/dd_dimen_45px"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_home_top_search_black"/>

        <TextView
            android:id="@+id/tv_search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_search_icon"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:layout_marginRight="@dimen/dd_dimen_105px"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="@dimen/dd_dimen_45px"
            android:layout_height="@dimen/dd_dimen_45px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:src="@mipmap/ic_pedo_right_normal"/>

    </RelativeLayout>

</LinearLayout>