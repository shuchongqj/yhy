<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!--<include layout="@layout/title_normal_item">

    </include>-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:drawableLeft="@mipmap/icon_hint"
        android:drawablePadding="@dimen/dd_dimen_20px"
        android:textColor="@color/main"
        android:text="以下信息必须真实有效"
        android:textSize="@dimen/dd_dimen_26px"
        android:background="@color/bg_grey"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center_vertical"
            android:minWidth="@dimen/dd_dimen_120px"
            android:text="姓名"
            style="@style/fontType_30"/>

        <LinearLayout
            android:id="@+id/ll_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:minWidth="@dimen/margin_50dp">

            <View
                style="@style/split_line"
                android:layout_width="@dimen/margin_0.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_20dp">

            </View>

            <TextView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="必填"
                style="@style/inputFontType_30"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_name"
            style="@style/defaultFontType_30"
            android:gravity="left"
            android:hint="@string/hint_person_name"
            android:maxLength="10"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_name_value"
            android:layout_toRightOf="@+id/tv_name_label"
            android:background="@color/transparent" />
    </RelativeLayout>

    <View
        style="@style/split_line"
        android:layout_marginLeft="@dimen/dd_dimen_30px"></View>

    <RelativeLayout
        android:id="@+id/rl_select_id_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_id_type_label"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="left"
            android:minWidth="@dimen/dd_dimen_120px"
            android:text="证件类型"
            style="@style/fontType_30"/>

        <LinearLayout
            android:id="@+id/ll_id_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:minWidth="@dimen/dd_dimen_50px">

            <View
                style="@style/split_line"
                android:layout_width="@dimen/margin_0.5dp"
                android:layout_height="@dimen/margin_20dp"
                android:layout_gravity="left"
                android:background="@color/white"
                android:layout_marginRight="@dimen/dd_dimen_35px">

            </View>

            <ImageView
                android:id="@+id/iv_select_id_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:src="@mipmap/arrow_down_icon" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_id_type"
            style="@style/defaultFontType_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:text=""
            android:layout_toLeftOf="@+id/ll_id_type_value"
            android:layout_toRightOf="@+id/tv_id_type_label"
            android:background="@color/transparent" />
    </RelativeLayout>

    <View
        style="@style/split_line"
        android:layout_marginLeft="@dimen/dd_dimen_30px"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_id_value_label"
            style="@style/fontType_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="left"
            android:minWidth="@dimen/dd_dimen_120px"
            android:text="证件号" />

        <LinearLayout
            android:id="@+id/ll_id_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:minWidth="@dimen/margin_50dp">

            <View
                style="@style/split_line"
                android:layout_width="@dimen/margin_0.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_20dp">

            </View>

            <TextView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="必填"
                style="@style/inputFontType_30"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_id_value"
            style="@style/defaultFontType_30"
            android:gravity="left"
            android:hint="@string/hint_person_id"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_id_value"
            android:layout_toRightOf="@+id/tv_id_value_label"
            android:background="@color/transparent" />
    </RelativeLayout>

    <View
        style="@style/split_line"
        android:layout_marginLeft="@dimen/dd_dimen_30px"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_100px"
        android:background="@color/white"
        android:paddingLeft="@dimen/dd_dimen_30px">

        <TextView
            android:id="@+id/tv_phone_label"
            style="@style/fontType_30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="left"
            android:minWidth="@dimen/dd_dimen_120px"
            android:text="手机号" />

        <LinearLayout
            android:id="@+id/ll_phone_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dd_dimen_30px"
            android:minWidth="@dimen/margin_50dp">

            <View
                style="@style/split_line"
                android:layout_width="@dimen/margin_0.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_20dp">

            </View>

            <TextView
                android:layout_width="@dimen/margin_30dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="必填"
                style="@style/inputFontType_30"/>
        </LinearLayout>

        <EditText
            android:id="@+id/et_phone_value"
            style="@style/defaultFontType_30"
            android:gravity="left"
            android:hint="@string/hint_person_phone"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLength="11"
            android:inputType="number"
            android:layout_toLeftOf="@+id/ll_phone_value"
            android:layout_toRightOf="@+id/tv_phone_label"
            android:background="@color/transparent" />
    </RelativeLayout>

    <View
        style="@style/split_line"
        android:layout_marginLeft="@dimen/dd_dimen_30px"></View>

    <!--<Button
        android:id="@+id/btn_finish"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@mipmap/btn_orange_selector"
        android:text="完成"
        android:textColor="@color/white" />-->
</LinearLayout>

