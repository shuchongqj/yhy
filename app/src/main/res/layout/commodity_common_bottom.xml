<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/commodity_bottom_other_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/commodity_bottom_service_phone_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_customer_service_phone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:text="@string/tv_service_phone"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_20px" />
            </LinearLayout>

            <View
                android:id="@+id/commodity_bottom_line2"
                android:layout_width="@dimen/dd_dimen_1px"
                android:layout_height="match_parent"
                android:background="@color/orderline_e1e1e1"/>

            <LinearLayout
                android:id="@+id/commodity_bottom_customserver_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_customer_service" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_10px"
                    android:text="@string/tv_custom_server"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_20px" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dd_dimen_1px"
                android:layout_height="match_parent"
                android:background="@color/orderline_e1e1e1" />

            <LinearLayout
                android:id="@+id/commodity_bottom_collect_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12"
                android:visibility="gone"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/dd_dimen_90px"
                    android:layout_height="@dimen/dd_dimen_47px"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:layout_width="@dimen/dd_dimen_45px"
                        android:layout_height="@dimen/dd_dimen_30px"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:src="@mipmap/spcart_logo" />

                    <TextView
                        android:id="@+id/tv_spcart_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dd_dimen_10px"
                        android:background="@drawable/spcart_num_bg_02"
                        android:layout_marginTop="@dimen/dd_dimen_5px"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dd_dimen_7px"
                        android:paddingRight="@dimen/dd_dimen_7px"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_20px" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dd_dimen_8px"
                    android:text="@string/tv_spcart"
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/text_size_20px" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dd_dimen_1px"
                android:layout_height="match_parent"
                android:background="@color/orderline_e1e1e1" />

            <LinearLayout
                android:id="@+id/commodity_bottom_shopcart_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/white"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_add_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_add_shopcart"
                    android:textColor="@color/red_ying"
                    android:textSize="@dimen/text_size_36px" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/commodity_bottom_purchase_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@color/blue_ying"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/commodity_bottom_purchase_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/commodity_bottom_purchase_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_purchase"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_36px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commodity_bottom_consult_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:background="@android:color/white"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/commodity_bottom_consult_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commodity_bottom_consult_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_phone_consult"
                android:textColor="@color/neu_40c5d7"
                android:textSize="@dimen/text_size_36px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commodity_bottom_chat_private_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:background="@color/neu_ff9900"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/commodity_bottom_chat_private_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/commodity_bottom_chat_private_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_chat_private"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_36px" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>