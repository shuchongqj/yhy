<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_E5"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/lin_item_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_coupon_item_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_item_coupon_top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <LinearLayout
                android:id="@+id/lin_merchant_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/abc_edit_text_inset_bottom_material"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/abc_ab_share_pack_mtrl_alpha"/>
                <TextView
                    android:id="@+id/tv_merchant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_5dp"
                    android:textColor="@color/scan_result_item_text_color"
                    android:textSize="14dp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_merchant_info"
                android:layout_marginLeft="30dp"
                android:textColor="@color/tv_use_addr"
                android:textSize="18dp"
                android:layout_alignBottom="@+id/tv_value"
                android:gravity="center_vertical"
                android:text="@string/coupon_use_method"/>
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_rmb_unit"
                android:textSize="36dp"
                android:text="20"
                android:textStyle="bold"
                android:textColor="@color/tv_item_bottom_bg"
                android:layout_alignBottom="@+id/tv_rmb_unit"/>
            <TextView
                android:id="@+id/tv_rmb_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginRight="23dp"
                android:layout_marginTop="52dp"
                android:textStyle="bold"
                android:textColor="@color/tv_item_bottom_bg"
                android:padding="7dp"

                android:textSize="18dp"
                android:text="@string/coupon_rmb_unit"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="35dp"

                android:layout_alignParentRight="true">
                <ImageView
                    android:id="@+id/iv_coupon_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_coupon_right_out_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/tv_item_bottom_bg"
                    android:visibility="gone"
                    android:text="@string/coupon_right_out_due"/>
            </RelativeLayout>

        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_split_line"
            android:layout_width="match_parent"
            android:layout_height="10dp"

            android:background="@drawable/item_line_check_orange"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rel_item_coupon_top"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/tv_use_requirement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="满100元可用"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_marginLeft="28dp"
                android:textSize="14dp"
                />
            <TextView
                android:id="@+id/tv_validate_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="2012-15-18 至 2013-07-14"
                android:singleLine="true"
                android:textSize="14dp"

                android:layout_marginRight="23dp"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>