<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <LinearLayout
        android:id="@+id/ll_item_dingdan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_norm_ffffff"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_norm_bebebe"
                android:text="2015-10-15 14:04"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_time"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_messsagecenterhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/messagecenter_hudong"/>
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tracy"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/color_norm_000000"
                        android:layout_toRightOf="@+id/iv_messsagecenterhead"
                        android:textStyle="bold"/>
                <TextView
                    android:id="@+id/iv_tv_desc"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/color_norm_000000"
                    android:text="图片上的花是什么啊，好美啊！图片上的花是什么啊，好美啊！"
                    android:layout_toRightOf="@+id/iv_messsagecenterhead"
                   />

            <ImageView
                android:id="@+id/iv_messagecenter_scenery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_vertical"
               android:layout_alignParentRight="true"
                android:src="@drawable/messagecenter_hudong"/>

            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/color_norm_bebebe" />
    </LinearLayout>

</LinearLayout>