<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_header_view_community_image1"
            android:layout_width="0dp"
            android:layout_height="@dimen/dd_dimen_180px"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="@dimen/dd_dimen_2px"
            android:layout_height="match_parent"
            android:background="@color/neu_f4f4f4"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home_header_view_community_image2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_2px"
                android:background="@color/neu_f4f4f4"/>

            <ImageView
                android:id="@+id/home_header_view_community_image3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>