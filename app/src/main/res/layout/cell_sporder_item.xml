<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_cell_item"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_210px"
        android:background="@color/orderbackground_f4f4f4"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="@dimen/dd_dimen_170px"
            android:layout_height="@dimen/dd_dimen_170px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_50px">

            <ImageView
                android:id="@+id/sa_iv_good"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@mipmap/icon_default_215_215"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_30px"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_six"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_store_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/dd_dimen_15px"
                    android:text="仅剩5件"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dd_dimen_26px" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_170px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_15px">

            <TextView
                android:id="@+id/tv_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_28px" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品种：红"
                    android:textColor="@color/neu_999999"
                    android:textSize="@dimen/dd_dimen_26px"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/main"
                        android:text="积分可抵￥3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_26px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dd_dimen_24px"
                        android:background="@color/main"
                        android:paddingLeft="@dimen/dd_dimen_10px"
                        android:paddingRight="@dimen/dd_dimen_10px"
                        android:text="降价15元"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dd_dimen_26px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dd_dimen_5px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_28px" />

                    <TextView
                        android:id="@+id/tv_goods_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:textSize="@dimen/dd_dimen_36px" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_26px" />

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:background="@color/orderline_e1e1e1" />

    <LinearLayout
        android:id="@+id/ll_bottom_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_coupon_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:background="@drawable/scenic_top_translate_selector"
            android:clickable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:src="@mipmap/discount_coupon_image" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_20px"
                    android:text="优惠券"
                    android:textColor="#666"
                    android:textSize="@dimen/dd_dimen_30px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="@dimen/dd_dimen_24px" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_5px"
                    android:src="@mipmap/arrow_go" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dd_dimen_1px"
                android:layout_alignParentBottom="true"
                android:background="@color/orderline_e1e1e1" />
        </RelativeLayout>


        <EditText
            android:id="@+id/scenic_othersrq_et"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_110px"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="@string/label_point_order_leave_msg_hint"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/order_edit_cursor"
            android:cursorVisible="true"
            android:inputType="text|textMultiLine"
            android:maxLength="45"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_15px"
            android:paddingTop="3dip"
            android:textColor="@color/order_666666"
            android:textColorHint="@color/order_999999"
            android:textSize="@dimen/dd_dimen_28px" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/orderline_e1e1e1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_110px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dd_dimen_30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_all_count_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:textColor="#666"
                    android:textSize="@dimen/dd_dimen_30px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dd_dimen_25px"
                    android:text="合计："
                    android:textColor="@color/neu_666666"
                    android:textSize="@dimen/dd_dimen_30px" />

                <TextView
                    android:id="@+id/tv_all_price_goods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_30px" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/orderline_e1e1e1" />
    </LinearLayout>

</LinearLayout>