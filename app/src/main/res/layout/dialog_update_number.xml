<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dlg_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_45dp"
        android:paddingRight="@dimen/margin_45dp"
        android:paddingTop="@dimen/margin_20dp">

        <TextView
            android:id="@+id/msg_dlg_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textSize="18sp" />

        <com.quanyan.yhy.ui.spcart.view.CartEditNumberChoose
            android:id="@+id/cart_edit_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp" />

    </LinearLayout>


    <include layout="@layout/common_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:layout_marginTop="@dimen/margin_5dp"
        android:divider="@drawable/common_divider"
        android:showDividers="middle">

        <TextView
            android:id="@+id/msg_dialog_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/neu_999999"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/msg_dialog_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:minWidth="150dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/neu_099fde"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>