<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_order_combo_pressed"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_consult"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dd_dimen_220px"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_default_215_215" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dd_dimen_24px"
                android:src="@mipmap/free_consult_image" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_master_consult_service_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="鹰和鹰运动咨询师咨询服务"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_30px" />

        <TextView
            android:id="@+id/tv_master_consult_service_adress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:layout_marginTop="@dimen/dd_dimen_10px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_30px" />

        <TextView
            android:id="@+id/tv_master_consult_service_unit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="0积分/15分钟"
            android:textColor="@color/main"
            android:textSize="@dimen/text_size_34px" />

        <TextView
            android:id="@+id/tv_master_consult_service_dis_unit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_15px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:layout_marginTop="@dimen/dd_dimen_8px"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="1200积分"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/text_size_28px" />

        <Button
            android:id="@+id/btn_start_master_consult_service"
            android:layout_width="@dimen/dd_dimen_180px"
            android:layout_height="@dimen/dd_dimen_60px"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dd_dimen_30px"
            android:layout_marginTop="@dimen/dd_dimen_15px"
            android:background="@drawable/btn_orange_selector"
            android:text="立即咨询"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>