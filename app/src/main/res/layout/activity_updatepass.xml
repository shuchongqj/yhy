<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orderbackground_f4f4f4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dd_dimen_160px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_32px" />

        <com.quanyan.yhy.ui.wallet.view.gridpasswordview.GridPasswordView
            android:id="@+id/gpv_customUi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dd_dimen_70px"
            android:layout_marginRight="@dimen/dd_dimen_70px"
            android:layout_marginTop="@dimen/dd_dimen_60px"
            android:background="@drawable/gridpassword_bg"
            app:gpvLineColor="@color/orderline_e1e1e1"
            app:gpvLineWidth="@dimen/dd_dimen_2px"
            app:gpvTextColor="@color/black"
            app:gpvTextSize="@dimen/dd_dimen_30px" />


        <LinearLayout
            android:id="@+id/ll_error_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dd_dimen_50px"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tips_image"
                android:layout_width="@dimen/dd_dimen_30px"
                android:layout_height="@dimen/dd_dimen_30px"
                android:layout_marginRight="@dimen/dd_dimen_15px"
                android:src="@mipmap/scenic_tips_image" />

            <TextView
                android:id="@+id/tv_orderconfig_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两次密码输入不一致"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_26px" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_config"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_100px"
            android:layout_marginTop="@dimen/dd_dimen_50px"
            android:layout_marginLeft="@dimen/dd_dimen_70px"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dd_dimen_70px"
            android:background="@drawable/btn_orange_selector"
            android:text="完成"
            android:textSize="@dimen/dd_dimen_34px" />

    </LinearLayout>

</LinearLayout>