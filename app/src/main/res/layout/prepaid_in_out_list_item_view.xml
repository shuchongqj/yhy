<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_136px"
    android:background="@color/White"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_income_expence_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="充值"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_32px"
           />

        <TextView
            android:id="@+id/tv_income_expence_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dd_dimen_18px"
            android:text="2014-04-06 12:39:00"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/dd_dimen_22px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_income_expence_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+90000"
        android:textColor="@color/neu_666666"
        android:textSize="@dimen/dd_dimen_38px"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider"></View>
</RelativeLayout>
