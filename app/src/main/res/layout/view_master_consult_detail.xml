<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.quanyan.base.view.customview.imgpager.ImgPagerView
            android:id="@+id/master_consult_detail_pager_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.quanyan.base.view.customview.imgpager.ImgPagerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/master_consult_detail_pager_view"
            android:background="@drawable/bg_gradient_white_black"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:paddingRight="@dimen/dd_dimen_30px"
            android:paddingTop="@dimen/dd_dimen_10px">

            <ImageView
                android:id="@+id/master_consult_detail_type_img_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_master_consult_detail_label"/>

            <TextView
                android:id="@+id/master_consult_detail_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dd_dimen_20px"
                android:layout_toRightOf="@id/commodity_type_img_label"
                android:text="@string/tv_master_consult"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_24px"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <TextView
            android:id="@+id/master_consult_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_30px"/>

        <TextView
            android:id="@+id/master_consult_detail_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/master_consult_detail_title"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:textColor="@color/neu_fa4619"
            android:textSize="@dimen/text_size_40px"/>

        <TextView
            android:id="@+id/master_consult_detail_points_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/master_consult_detail_points"
            android:layout_marginLeft="@dimen/dd_dimen_10px"
            android:layout_toRightOf="@id/master_consult_detail_points"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px"/>

        <TextView
            android:id="@+id/master_consult_detail_points_original"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/master_consult_detail_points"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/master_consult_detail_points_sub"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px"/>

        <TextView
            android:id="@+id/master_consult_detail_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/master_consult_detail_points"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:text="已售0笔"
            android:layout_alignParentLeft="true"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px"/>

        <TextView
            android:id="@+id/master_consult_detail_serve_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/master_consult_detail_points"
            android:layout_marginTop="@dimen/dd_dimen_20px"
            android:layout_toLeftOf="@id/master_consult_detail_sales"
            android:textColor="@color/neu_999999"
            android:textSize="@dimen/text_size_26px"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>

    <LinearLayout
        android:id="@+id/master_consult_detail_merchant_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dd_dimen_20px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px"
        android:paddingTop="@dimen/dd_dimen_20px">

        <ImageView
            android:id="@+id/master_consult_detail_merchant_img"
            android:layout_width="@dimen/dd_dimen_94px"
            android:layout_height="@dimen/dd_dimen_94px"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dd_dimen_20px">

            <TextView
                android:id="@+id/master_consult_detail_merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/text_size_30px"/>

            <ImageView
                android:id="@+id/master_consult_detail_merchant_certificate_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dd_dimen_10px"
                android:scaleType="centerCrop"
                android:src="@mipmap/iconfont"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dd_dimen_20px"
        android:background="@color/neu_f4f4f4"/>
</LinearLayout>