<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dlg_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_100px">

            <TextView
                android:id="@+id/tv_single_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_36px" />

            <RelativeLayout
                android:id="@+id/rl_single_cancle"
                android:layout_width="@dimen/dd_dimen_100px"
                android:layout_height="@dimen/dd_dimen_100px"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="â•³"
                    android:textColor="@color/neu_999999"
                    android:textSize="@dimen/dd_dimen_36px" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dd_dimen_1px"
            android:background="@color/ac_title_bg_color" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_65px"
            android:layout_marginRight="@dimen/dd_dimen_65px"
            android:layout_marginTop="@dimen/dd_dimen_25px"
            android:textColor="@color/neu_666666"
            android:paddingBottom="@dimen/dd_dimen_30px"
            android:textSize="@dimen/dd_dimen_30px" />

    </LinearLayout>

</LinearLayout>