<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_look_logistical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dd_dimen_30px"
    android:layout_marginTop="@dimen/dd_dimen_30px"
    android:paddingLeft="@dimen/dd_dimen_30px"
    android:paddingRight="@dimen/dd_dimen_30px">


    <ImageView
        android:id="@+id/iv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_logistical_address" />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:layout_toRightOf="@id/iv_address">

        <TextView
            android:id="@+id/tv_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/recevier_person"
            android:textColor="@color/neu_777777"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toRightOf="@id/tv_name_label"
            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"

            android:textColor="@color/neu_666666"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_address_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_label"
            android:layout_marginTop="@dimen/dd_dimen_18px"
            android:text="@string/recevier_address"
            android:textColor="@color/neu_777777"
            android:textSize="@dimen/text_size_28px" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dd_dimen_18px"
            android:textColor="@color/neu_666666"
            android:text=""
            android:textSize="@dimen/text_size_28px" />
    </RelativeLayout>


</RelativeLayout>
