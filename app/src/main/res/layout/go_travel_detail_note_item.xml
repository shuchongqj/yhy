<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/go_travel_note_item_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/go_travel_note_item_shrink_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dd_dimen_30px"
        android:paddingBottom="@dimen/dd_dimen_30px"
        android:paddingLeft="@dimen/dd_dimen_30px"
        android:paddingRight="@dimen/dd_dimen_30px">

        <View
            android:layout_width="@dimen/dd_dimen_6px"
            android:layout_height="@dimen/dd_dimen_24px"
            android:background="@color/main"/>

        <TextView
            android:id="@+id/go_travel_note_item_day_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:textColor="@color/tv_color_gray3"
            android:textSize="@dimen/text_size_24px"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dd_dimen_15px"
            android:gravity="left">

            <TextView
                android:id="@+id/go_travel_note_item_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_label_text_round"
                android:paddingBottom="@dimen/dd_dimen_5px"
                android:paddingLeft="@dimen/dd_dimen_21px"
                android:paddingRight="@dimen/dd_dimen_21px"
                android:paddingTop="@dimen/dd_dimen_5px"
                android:textColor="@color/main"
                android:maxLines="1"
                android:textSize="@dimen/text_size_20px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dd_dimen_30px">

            <ImageView
                android:id="@+id/go_travel_note_item_type"
                android:layout_width="@dimen/dd_dimen_28px"
                android:layout_height="@dimen/dd_dimen_30px"
                android:scaleType="center"
                android:src="@mipmap/travel_note_train"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dd_dimen_30px"
            android:gravity="right">

            <ImageView
                android:id="@+id/go_travel_note_item_shrink_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/arrow_up_icon"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_travel_note_item_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dd_dimen_10px"
            android:paddingLeft="@dimen/dd_dimen_55px"
            android:paddingRight="@dimen/dd_dimen_55px"
            android:paddingTop="@dimen/dd_dimen_10px">

            <!--<TextView
                android:id="@+id/go_travel_note_item_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/tv_color_grayBD"
                android:textSize="@dimen/text_size_28px"/>-->

            <me.codeboy.android.aligntextview.AlignTextView
                android:id="@+id/go_travel_note_item_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/neu_999999"
                android:textSize="@dimen/text_size_28px"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/go_travel_note_item_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>