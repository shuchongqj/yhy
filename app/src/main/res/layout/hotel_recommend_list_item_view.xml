<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dd_dimen_210px"
    android:layout_marginLeft="@dimen/dd_dimen_30px"
    android:layout_marginRight="@dimen/dd_dimen_30px"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_hotel_logo_pic"
        android:layout_width="@dimen/dd_dimen_150px"
        android:layout_height="@dimen/dd_dimen_150px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dd_dimen_20px"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_default_150_150" />

    <ImageView
        android:id="@+id/iv_hotel_stocknum"
        android:layout_width="@dimen/dd_dimen_60px"
        android:layout_height="@dimen/dd_dimen_60px"
        android:layout_alignLeft="@+id/iv_hotel_logo_pic"
        android:layout_alignTop="@+id/iv_hotel_logo_pic"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/iv_hotel_logo_pic"
        android:layout_alignTop="@+id/iv_hotel_logo_pic"
        android:layout_toRightOf="@+id/iv_hotel_logo_pic"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_hotel_name"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toLeftOf="@+id/linearLayout6"
            android:gravity="top"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rl_hotel_rateCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical">


                <TextView
                    android:id="@+id/tv_hotel_rateCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView9"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_22px" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_hotel_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rl_hotel_rateCount"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hotel_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dd_dimen_10px"
                    android:singleLine="true"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_20px" />

                <TextView
                    android:id="@+id/tv_hotel_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv_hotel_address"
                    android:layout_toRightOf="@+id/tv_hotel_address"
                    android:textColor="@color/neu_333333"
                    android:textSize="@dimen/dd_dimen_20px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hotel_level"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textColor="@color/neu_333333"
                android:textSize="@dimen/dd_dimen_20px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dd_dimen_20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hotel_price_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/money_symbol"
                android:textColor="@color/neu_fa4619"
                android:textSize="@dimen/dd_dimen_20px" />

            <TextView
                android:id="@+id/tv_hotel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dd_dimen_2px"
                android:layout_marginRight="@dimen/dd_dimen_3px"
                android:textColor="@color/neu_fa4619"
                android:textSize="@dimen/dd_dimen_36px" />

            <TextView
                android:id="@+id/tv_hotel_price_rise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="èµ·"
                android:textColor="@color/neu_fa4619"
                android:textSize="@dimen/dd_dimen_20px" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_hotel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dd_dimen_20px"
            android:layout_toLeftOf="@+id/linearLayout6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/neu_333333"
            android:textSize="@dimen/dd_dimen_28px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_hotel_logo_pic"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dd_dimen_30px">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dd_dimen_2px"
            android:background="@color/divider"></View>

    </RelativeLayout>

</RelativeLayout>