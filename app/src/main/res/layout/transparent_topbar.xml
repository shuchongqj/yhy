<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/trasparent_topbar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="48dp">

    <LinearLayout
        android:id="@+id/trasparent_topbar_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/dd_dimen_20px"
        android:paddingRight="@dimen/dd_dimen_20px">

        <ImageView
            android:id="@+id/trasparent_topbar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/scenic_arrow_back_white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/trasparent_topbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:maxWidth="120dp"
        android:visibility="invisible"
        android:singleLine="true"
        android:textColor="@color/tv_color_gray6"
        android:textSize="@dimen/dd_dimen_36px"/>

    <ImageView
        android:id="@+id/trasparent_topbar_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dd_dimen_20px"
        android:src="@mipmap/navi_more"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/trasparent_topbar_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trasparent_topbar_right_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dd_dimen_20px"
            android:src="@drawable/top_praise_selector"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/trasparent_topbar_right_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dd_dimen_20px"
            android:src="@mipmap/navi_top_collect"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/trasparent_topbar_right_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dd_dimen_20px"
            android:visibility="gone"
            android:src="@mipmap/icon_top_share_gray_bg"/>
    </LinearLayout>

</RelativeLayout>