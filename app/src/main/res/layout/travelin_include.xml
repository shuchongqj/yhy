<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_110px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="姓        名"
            android:textColor="@color/order_666666"
            android:textSize="@dimen/dd_dimen_30px" />


        <EditText
            android:id="@+id/et_travelin_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_230px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:background="@null"
            android:hint="必填"
            android:textCursorDrawable="@drawable/color_cursor_black"
            android:maxLength="20"
            android:textColor="@color/order_666666"
            android:textColorHint="@color/order_999999"
            android:textSize="@dimen/dd_dimen_28px" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:background="@color/orderline_e1e1e1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_110px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="证件类型"
            android:textColor="@color/order_666666"
            android:textSize="@dimen/dd_dimen_30px" />

        <LinearLayout
            android:id="@+id/ll_travelin_cardtype"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_230px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_travelin_cardtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="身份证"
                android:textColor="@color/order_666666"
                android:textSize="@dimen/dd_dimen_28px" />

            <ImageView
                android:id="@+id/iv_select_id_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dd_dimen_10px"
                android:src="@mipmap/arrow_down_icon" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:background="@color/orderline_e1e1e1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_110px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="证件号码"
            android:textColor="@color/order_666666"
            android:textSize="@dimen/dd_dimen_30px" />


        <EditText
            android:id="@+id/et_travelin_cardtnum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_230px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor_black"
            android:hint="必填"
            android:maxLength="20"
            android:textColor="@color/order_666666"
            android:textColorHint="@color/order_999999"
            android:textSize="@dimen/dd_dimen_28px" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_2px"
        android:layout_marginLeft="@dimen/dd_dimen_30px"
        android:background="@color/orderline_e1e1e1" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dd_dimen_110px"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dd_dimen_30px"
            android:text="手机号码"
            android:textColor="@color/order_666666"
            android:textSize="@dimen/dd_dimen_30px" />


        <EditText
            android:id="@+id/et_travelin_tel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dd_dimen_230px"
            android:layout_marginRight="@dimen/dd_dimen_15px"
            android:background="@null"
            android:maxLength="11"
            android:textCursorDrawable="@drawable/color_cursor_black"
            android:inputType="number"
            android:hint="必填"
            android:textColor="@color/order_666666"
            android:textColorHint="@color/order_999999"
            android:textSize="@dimen/dd_dimen_28px" />

    </RelativeLayout>

</LinearLayout>