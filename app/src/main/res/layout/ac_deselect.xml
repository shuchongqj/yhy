<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:labelview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_norm_f4f4f4"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ag_ll_network"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

    </LinearLayout>


    <ScrollView
        android:id="@+id/ag_sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_norm_f4f4f4"
        android:fillViewport="false"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ag_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/ag_rl_hot"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_50px"
                    android:background="@color/white"
                    android:visibility="gone">


                    <View
                        android:id="@+id/view5"
                        android:layout_width="@dimen/dd_dimen_6px"
                        android:layout_height="@dimen/dd_dimen_27px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@color/main" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:layout_toEndOf="@+id/view5"
                        android:layout_toRightOf="@+id/view5"
                        android:gravity="center"
                        android:minHeight="@dimen/dd_dimen_80px"
                        android:paddingRight="@dimen/dd_dimen_20px"
                        android:text="@string/label_tag_hot_destination"
                        android:textColor="@color/color_norm_636363"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>


                <com.quanyan.yhy.view.HomeMenu_GridView
                    android:id="@+id/gridviewremen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:background="@color/white"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/dd_dimen_20px"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    labelview:horizontalPadding="10dp"></com.quanyan.yhy.view.HomeMenu_GridView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dd_dimen_20px"
                    android:layout_marginTop="@dimen/dd_dimen_40px"
                    android:background="@color/color_norm_f4f4f4"
                    android:orientation="vertical">

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/ag_rl_china"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:layout_marginTop="@dimen/dd_dimen_50px"
                    android:background="@color/white"
                    android:visibility="gone">

                    <View
                        android:id="@+id/view6"
                        android:layout_width="@dimen/dd_dimen_6px"
                        android:layout_height="@dimen/dd_dimen_27px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="@color/main" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dd_dimen_20px"
                        android:layout_toEndOf="@+id/view6"
                        android:layout_toRightOf="@+id/view6"
                        android:gravity="center"
                        android:minHeight="@dimen/dd_dimen_80px"
                        android:paddingRight="@dimen/dd_dimen_20px"
                        android:text="@string/label_tag_city_destination"
                        android:textColor="@color/color_norm_636363"
                        android:textSize="@dimen/dd_dimen_30px" />
                </RelativeLayout>

                <com.quanyan.yhy.view.HomeMenu_GridView
                    android:id="@+id/gridviewhistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dd_dimen_40px"
                    android:layout_marginLeft="@dimen/dd_dimen_30px"
                    android:layout_marginRight="@dimen/dd_dimen_30px"
                    android:background="@color/white"
                    android:gravity="center"
                    android:horizontalSpacing="@dimen/dd_dimen_10px"
                    android:listSelector="@color/transparent"
                    android:numColumns="3"
                    labelview:horizontalPadding="10dp">

                </com.quanyan.yhy.view.HomeMenu_GridView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>