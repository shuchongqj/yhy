<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/yhy_size_5px">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_back_gray"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/yhy_size_15px"
        android:paddingTop="@dimen/yhy_size_6px"
        android:paddingBottom="@dimen/yhy_size_6px"
        android:paddingRight="@dimen/yhy_size_8px"/>

    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_back"
        android:layout_marginLeft="@dimen/yhy_size_6px"
        android:layout_marginRight="@dimen/yhy_size_13px"
        android:background="@drawable/yhy_top_search_bg"
        android:drawableLeft="@mipmap/ic_search"
        android:drawablePadding="@dimen/yhy_size_11px"
        android:hint="城市名、拼音首字母…"
        android:paddingBottom="@dimen/yhy_size_6px"
        android:paddingTop="@dimen/yhy_size_6px"
        android:textColor="@color/color_4A4A4A"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/yhy_size_14px"
        android:paddingLeft="@dimen/yhy_size_14px"
        android:layout_marginBottom="@dimen/yhy_size_5px"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/et_search"
        android:background="@color/color_F0F0F0"/>
</RelativeLayout>